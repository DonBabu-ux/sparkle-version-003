{
    "version": 2,
    "name": "sparkle-campus",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "views/**",
                    "public/**",
                    "models/**",
                    "controllers/**",
                    "routes/**",
                    "config/**",
                    "utils/**",
                    "middleware/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
}