  <script>
    // Demo state
    let currentScene = 1;
    const totalScenes = 6;
    let hasPostedStory = false;
    let isAutoPlaying = true;
    let autoPlayInterval;
    const sceneDuration = 4000; // 4 seconds per scene

    // Initialize demo
    function initDemo() {
        updateProgress();
        updateSteps();
        updateTimeline();
        startAutoPlay();
        
        // Show auto-play status
        showAutoPlayStatus();
    }

    // Start auto-play
    function startAutoPlay() {
        if (autoPlayInterval) {
            clearInterval(autoPlayInterval);
        }
        
        autoPlayInterval = setInterval(() => {
            if (currentScene < totalScenes) {
                nextScene();
            } else {
                // At the end, show cheer and restart after delay
                showCheers();
                setTimeout(() => {
                    restartDemo();
                    setTimeout(() => {
                        startAutoPlay();
                    }, 500);
                }, 3000);
            }
        }, sceneDuration);
    }

    // Stop auto-play
    function stopAutoPlay() {
        if (autoPlayInterval) {
            clearInterval(autoPlayInterval);
            autoPlayInterval = null;
        }
    }

    // Toggle auto-play
    function toggleAutoPlay() {
        isAutoPlaying = !isAutoPlaying;
        if (isAutoPlaying) {
            startAutoPlay();
        } else {
            stopAutoPlay();
        }
        showAutoPlayStatus();
    }

    // Show auto-play status
    function showAutoPlayStatus() {
        // Remove existing status if any
        const existingStatus = document.querySelector('.auto-play-status');
        if (existingStatus) {
            existingStatus.remove();
        }
        
        const status = document.createElement('div');
        status.className = 'auto-play-status';
        status.innerHTML = `
            <div style="
                position: fixed;
                bottom: 20px;
                right: 20px;
                background: rgba(255, 255, 255, 0.9);
                padding: 10px 20px;
                border-radius: 50px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                display: flex;
                align-items: center;
                gap: 10px;
                z-index: 1000;
                border: 2px solid ${isAutoPlaying ? '#4CAF50' : '#f44336'};
                animation: fadeIn 0.5s ease;
            ">
                <i class="fas ${isAutoPlaying ? 'fa-play' : 'fa-pause'}" 
                   style="color: ${isAutoPlaying ? '#4CAF50' : '#f44336'}"></i>
                <span style="color: var(--dark-pink); font-weight: 600;">
                    ${isAutoPlaying ? 'Auto-playing' : 'Paused'}
                </span>
                <button onclick="toggleAutoPlay()" style="
                    background: ${isAutoPlaying ? '#f44336' : '#4CAF50'};
                    color: white;
                    border: none;
                    padding: 5px 15px;
                    border-radius: 20px;
                    cursor: pointer;
                    font-weight: 600;
                ">
                    ${isAutoPlaying ? 'Pause' : 'Play'}
                </button>
            </div>
        `;
        
        document.body.appendChild(status);
        
        // Auto-hide after 3 seconds
        setTimeout(() => {
            status.style.opacity = '0.5';
            status.style.transition = 'opacity 0.5s';
        }, 3000);
    }

    // Next scene
    function nextScene() {
        if (currentScene < totalScenes) {
            // Special actions based on current scene
            switch(currentScene) {
                case 1:
                    // Simulate sign up
                    console.log("User signed up successfully!");
                    break;
                case 2:
                    // Dashboard accessed
                    console.log("Dashboard loaded");
                    break;
                case 3:
                    // Story posted
                    if (!hasPostedStory) {
                        postStory();
                        hasPostedStory = true;
                    }
                    break;
                case 4:
                    // Messages checked
                    simulateChat();
                    break;
                case 5:
                    // Moments scrolled
                    showNewMoment();
                    // Small cheer when posting is seen
                    setTimeout(() => {
                        miniCheer();
                    }, 1500);
                    break;
            }

            // Move to next scene
            document.getElementById(`scene${currentScene}`).classList.remove('active');
            document.querySelector(`.step-indicator[data-step="${currentScene}"]`).classList.remove('active');
            document.getElementById(`step${currentScene}`).classList.remove('active');
            
            currentScene++;
            
            document.getElementById(`scene${currentScene}`).classList.add('active');
            document.querySelector(`.step-indicator[data-step="${currentScene}"]`).classList.add('active');
            document.getElementById(`step${currentScene}`).classList.add('active');
            
            updateProgress();
            updateTimeline();
            
            // Update button states
            document.getElementById('prevBtn').disabled = currentScene === 1;
            document.getElementById('nextBtn').disabled = currentScene === totalScenes;
        }
    }

    // Previous scene
    function prevScene() {
        // When manually navigating, pause auto-play
        if (isAutoPlaying) {
            stopAutoPlay();
            isAutoPlaying = false;
            showAutoPlayStatus();
        }
        
        if (currentScene > 1) {
            document.getElementById(`scene${currentScene}`).classList.remove('active');
            document.querySelector(`.step-indicator[data-step="${currentScene}"]`).classList.remove('active');
            document.getElementById(`step${currentScene}`).classList.remove('active');
            
            currentScene--;
            
            document.getElementById(`scene${currentScene}`).classList.add('active');
            document.querySelector(`.step-indicator[data-step="${currentScene}"]`).classList.add('active');
            document.getElementById(`step${currentScene}`).classList.add('active');
            
            updateProgress();
            updateTimeline();
            
            // Update button states
            document.getElementById('prevBtn').disabled = currentScene === 1;
            document.getElementById('nextBtn').disabled = currentScene === totalScenes;
        }
    }

    // Go to specific scene
    function goToScene(sceneNumber) {
        // When manually navigating, pause auto-play
        if (isAutoPlaying) {
            stopAutoPlay();
            isAutoPlaying = false;
            showAutoPlayStatus();
        }
        
        document.getElementById(`scene${currentScene}`).classList.remove('active');
        document.querySelector(`.step-indicator[data-step="${currentScene}"]`).classList.remove('active');
        document.getElementById(`step${currentScene}`).classList.remove('active');
        
        currentScene = sceneNumber;
        
        document.getElementById(`scene${currentScene}`).classList.add('active');
        document.querySelector(`.step-indicator[data-step="${currentScene}"]`).classList.add('active');
        document.getElementById(`step${currentScene}`).classList.add('active');
        
        updateProgress();
        updateTimeline();
        
        // Update button states
        document.getElementById('prevBtn').disabled = currentScene === 1;
        document.getElementById('nextBtn').disabled = currentScene === totalScenes;
    }

    // Update progress bar
    function updateProgress() {
        const progress = ((currentScene - 1) / (totalScenes - 1)) * 100;
        document.getElementById('progressBar').style.width = `${progress}%`;
    }

    // Update step indicators
    function updateSteps() {
        document.querySelectorAll('.step-indicator').forEach((step, index) => {
            if (index + 1 <= currentScene) {
                step.classList.add('active');
            } else {
                step.classList.remove('active');
            }
        });
    }

    // Update timeline
    function updateTimeline() {
        document.querySelectorAll('.timeline-step').forEach((step, index) => {
            const stepNumber = index + 1;
            if (stepNumber < currentScene) {
                step.classList.add('completed');
                step.classList.remove('active');
            } else if (stepNumber === currentScene) {
                step.classList.add('active');
                step.classList.remove('completed');
            } else {
                step.classList.remove('active', 'completed');
            }
        });
    }

