    <script>
        // Demo state
        let currentScene = 1;
        const totalScenes = 7;
        let autoPlayInterval;
        const sceneDuration = 2000; // 2 seconds per scene
        
        // Fix auto-restart function
        function startAutoPlay() {
            if (autoPlayInterval) {
                clearInterval(autoPlayInterval);
            }
            
            autoPlayInterval = setInterval(() => {
                if (currentScene < totalScenes) {
                    nextScene();
                } else {
                    // At the end, add celebration and auto-restart
                    addCelebration();
                    
                    // Auto-restart after celebration
                    setTimeout(() => {
                        // Hide all scenes
                        for (let i = 1; i <= totalScenes; i++) {
                            document.getElementById(`scene${i}`).classList.remove('active');
                        }
                        
                        // Reset to first scene
                        currentScene = 1;
                        document.getElementById('scene1').classList.add('active');
                        
                        // Continue auto-play
                        startAutoPlay();
                    }, 1500); // Give time for celebration before restart
                }
            }, sceneDuration);
        }
        
        // Next scene
        function nextScene() {
            if (currentScene < totalScenes) {
                // Scene-specific actions
                performSceneAction(currentScene);
                
                // Hide current scene
                document.getElementById(`scene${currentScene}`).classList.remove('active');
                
                // Move to next scene
                currentScene++;
                
                // Show next scene
                document.getElementById(`scene${currentScene}`).classList.add('active');
                
                // Add mini animations
                addSceneTransition();
            }
        }
        
        // Scene-specific actions
        function performSceneAction(sceneNumber) {
            switch(sceneNumber) {
                case 1: // Sign up
                    simulateTyping();
                    break;
                case 2: // Dashboard
                    highlightDashboardItem();
                    break;
                case 3: // Post story
                    simulateCameraCapture();
                    break;
                case 4: // Messages
                    simulateNewMessage();
                    break;
                case 5: // Moments
                    simulateLike();
                    break;
                case 6: // Team
                    highlightTeamMember();
                    break;
            }
        }
        
        // Scene setup animations
        function setupSceneAnimations() {
            // Add floating particles to final scene
            const finalScreen = document.getElementById('scene7');
            setInterval(() => {
                addSparkleParticle(finalScreen);
            }, 300);
        }
        
        // Simulate typing in sign up form
        function simulateTyping() {
            const inputs = document.querySelectorAll('.form-input');
            inputs.forEach((input, index) => {
                setTimeout(() => {
                    input.style.boxShadow = '0 0 0 2px var(--primary-pink)';
                    setTimeout(() => {
                        input.style.boxShadow = 'none';
                    }, 500);
                }, index * 300);
            });
        }
        
        // Highlight dashboard item
        function highlightDashboardItem() {
            const icons = document.querySelectorAll('.app-icon');
            const randomIcon = icons[Math.floor(Math.random() * icons.length)];
            randomIcon.style.transform = 'scale(1.1)';
            randomIcon.style.boxShadow = '0 5px 20px rgba(255, 0, 102, 0.3)';
            setTimeout(() => {
                randomIcon.style.transform = 'scale(1)';
                randomIcon.style.boxShadow = '0 5px 15px rgba(0,0,0,0.05)';
            }, 1000);
        }
        
        // Simulate camera capture
        function simulateCameraCapture() {
            const captureBtn = document.querySelector('.capture-btn');
            captureBtn.style.transform = 'scale(0.8)';
            captureBtn.style.backgroundColor = 'var(--primary-pink)';
            
            // Flash effect
            const cameraPreview = document.querySelector('.camera-preview');
            cameraPreview.style.backgroundColor = 'white';
            
            setTimeout(() => {
                captureBtn.style.transform = 'scale(1)';
                captureBtn.style.backgroundColor = 'white';
                cameraPreview.style.backgroundColor = '';
            }, 300);
            
            setTimeout(() => {
                cameraPreview.style.backgroundColor = '';
            }, 600);
        }
        
        // Simulate new message
        function simulateNewMessage() {
            const conversations = document.querySelector('.conversations');
            const newMessage = document.createElement('div');
            newMessage.className = 'conversation-item';
            newMessage.innerHTML = `
                <div class="conversation-avatar">YT</div>
                <div style="flex: 1;">
                    <div style="font-weight: 600; color: var(--dark-pink);">You</div>
                    <div style="color: #666; font-size: 0.9rem;">This app is amazing! üéâ</div>
                </div>
                <div style="color: var(--primary-pink); font-size: 0.8rem;">now</div>
            `;
            newMessage.style.opacity = '0';
            newMessage.style.transform = 'translateX(-20px)';
            conversations.insertBefore(newMessage, conversations.firstChild);
            
            setTimeout(() => {
                newMessage.style.opacity = '1';
                newMessage.style.transform = 'translateX(0)';
                newMessage.style.transition = 'all 0.5s ease';
            }, 10);
            
            // Scroll to show new message
            setTimeout(() => {
                conversations.scrollTop = 0;
            }, 100);
        }
        
        // Simulate like on moments
        function simulateLike() {
            const likeButtons = document.querySelectorAll('.action-button');
            const likeButton = likeButtons[0];
            const heartIcon = likeButton.querySelector('i');
            const countSpan = likeButton.querySelector('span');
            
            // Animate like
            heartIcon.style.transform = 'scale(1.5)';
            heartIcon.style.color = 'var(--hot-pink)';
            
            // Update count
            const currentCount = parseInt(countSpan.textContent);
            countSpan.textContent = currentCount + 1;
            
            // Reset animation
            setTimeout(() => {
                heartIcon.style.transform = 'scale(1)';
                setTimeout(() => {
                    heartIcon.style.color = 'var(--primary-pink)';
                }, 300);
            }, 300);
        }
        
        // Highlight random team member
        function highlightTeamMember() {
            const members = document.querySelectorAll('.team-member');
            const randomMember = members[Math.floor(Math.random() * members.length)];
            randomMember.style.transform = 'translateY(-5px)';
            randomMember.style.boxShadow = '0 10px 25px rgba(255, 0, 102, 0.2)';
            
            setTimeout(() => {
                randomMember.style.transform = 'translateY(0)';
                randomMember.style.boxShadow = '0 5px 15px rgba(0,0,0,0.05)';
            }, 1000);
        }
        
        // Add scene transition effects
        function addSceneTransition() {
            const scene = document.getElementById(`scene${currentScene}`);
            
            // Add mini sparkle effect
            for (let i = 0; i < 3; i++) {
                setTimeout(() => {
                    addMiniSparkle(scene);
                }, i * 200);
            }
        }
        
        // Add mini sparkle
        function addMiniSparkle(container) {
            const sparkle = document.createElement('div');
            sparkle.className = 'cheer-particle';
            sparkle.innerHTML = '‚ú®';
            sparkle.style.left = `${Math.random() * 80 + 10}%`;
            sparkle.style.top = `${Math.random() * 80 + 10}%`;
            sparkle.style.fontSize = '1rem';
            
            container.appendChild(sparkle);
            
            setTimeout(() => {
                sparkle.remove();
            }, 2000);
        }
        
        // Add sparkle particle to final scene
        function addSparkleParticle(container) {
            const particle = document.createElement('div');
            particle.className = 'cheer-particle';
            particle.innerHTML = '‚ú®';
            particle.style.left = `${Math.random() * 100}%`;
            particle.style.top = `${Math.random() * 100}%`;
            particle.style.fontSize = `${Math.random() * 1 + 0.5}rem`;
            
            container.appendChild(particle);
            
            setTimeout(() => {
                particle.remove();
            }, 2000);
        }
        
        // Add celebration effect
        function addCelebration() {
            const finalScreen = document.getElementById('scene7');
            
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const emoji = document.createElement('div');
                    emoji.className = 'cheer-particle';
                    emoji.innerHTML = ['üéâ', '‚ú®', 'üåü', 'ü•≥', 'üíñ'][Math.floor(Math.random() * 5)];
                    emoji.style.left = `${Math.random() * 100}%`;
                    emoji.style.top = `${Math.random() * 100}%`;
                    emoji.style.fontSize = `${Math.random() * 2 + 1}rem`;
                    
                    finalScreen.appendChild(emoji);
                    
                    setTimeout(() => {
                        emoji.remove();
                    }, 2000);
                }, i * 100);
            }
        }
        
        // Restart demo manually
        function restartDemo() {
            // Show loading indicator
            document.getElementById('loadingIndicator').style.display = 'flex';
            
            // Hide all scenes
            for (let i = 1; i <= totalScenes; i++) {
                document.getElementById(`scene${i}`).classList.remove('active');
            }
            
            // Reset to first scene
            currentScene = 1;
            
            // Show first scene after delay
            setTimeout(() => {
                document.getElementById('loadingIndicator').style.display = 'none';
                document.getElementById('scene1').classList.add('active');
                
                // Restart auto-play
                startAutoPlay();
            }, 1500);
        }
        
        // About modal functions
        function showAboutModal() {
            // Pause auto-play when showing modal
            if (autoPlayInterval) {
                clearInterval(autoPlayInterval);
            }
            
            document.getElementById('aboutModal').style.display = 'flex';
        }
        
        function hideAboutModal() {
            document.getElementById('aboutModal').style.display = 'none';
            
            // Resume auto-play
            startAutoPlay();
        }
        
        // Close modal on outside click
        document.getElementById('aboutModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideAboutModal();
            }
        });
        
        // Pause on hover (optional)
        document.querySelector('.phone-container').addEventListener('mouseenter', () => {
            clearInterval(autoPlayInterval);
        });
        
        document.querySelector('.phone-container').addEventListener('mouseleave', () => {
            startAutoPlay();
        });
        
        // Initialize on load
        document.addEventListener('DOMContentLoaded', function() {
            initDemo();
            
            // Adjust phone screen size for mobile
            if (window.innerWidth <= 768) {
                const phoneScreen = document.querySelector('.phone-screen');
                const notch = document.querySelector('.phone-notch');
                
                // Calculate safe area for notch phones
                const notchHeight = notch.offsetHeight + 10; // Add some padding
                phoneScreen.style.height = `calc(100% - ${notchHeight}px)`;
                phoneScreen.style.marginTop = `${notchHeight}px`;
            }
        });
        
        function initDemo() {
            // Hide loading indicator
            setTimeout(() => {
                document.getElementById('loadingIndicator').style.display = 'none';
            }, 1500);
            
            // Start auto-play
            startAutoPlay();
            
            // Add scene-specific animations
            setupSceneAnimations();
        }
    </script>
