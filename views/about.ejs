            --secondary-pink: #ff80b3;
            --light-pink: #ffccdd;
            --hot-pink: #ff0066;
            --dark-pink: #cc3366;
            --sparkle-gold: #ffd700;
            --text-color: #5a0033;
            --gradient: linear-gradient(135deg, var(--primary-pink), var(--hot-pink));
