        let currentScene = 1;
        const totalScenes = 7;
        let autoPlayInterval;
        const sceneDuration = 3000; // 3 seconds per scene

        // Bot responses
        const botResponses = {
            'default': 'I can help you with sign-ups, features, safety, and more! What would you like to know?',
            'How do I sign up?': 'To sign up: 1) Download the app, 2) Use your student email/google email, 3) Confirm details, 4) Start connecting! Need more details?',
            'How to use Connect feature?': 'The Connect feature matches you with students sharing similar interests. Go to Connect → Choose interests → Start matching!',
            'Safety and privacy?': 'Sparkle has 24/7 moderation, end-to-end encryption, and student verification. Your safety is our top priority!',
            'Report an issue': 'To report an issue: 1) Go to Settings → Help Center → Report Issue, or 2) Email lilbeelogics@gmail.com',
            'hello': 'Hi there! 👋 How can I help you with Sparkle today?',
            'hi': 'Hello! Ready to sparkle up your campus life? What can I assist you with?',
            'thanks': 'You\'re welcome! 😊 Let me know if you need anything else.',
            'help': 'I can help with: account issues, features, safety concerns, and campus events. What do you need?'
        };

        // Modal functions
        function openDemo() {
            document.getElementById('demoModal').style.display = 'flex';
            document.body.style.overflow = 'hidden';
            initDemo();
        }

        function closeDemo() {
            document.getElementById('demoModal').style.display = 'none';
            document.body.style.overflow = 'auto';
            if (autoPlayInterval) {
                clearInterval(autoPlayInterval);
            }
        }

        function openHelp() {
            document.getElementById('helpModal').style.display = 'flex';
            document.body.style.overflow = 'hidden';
            closeDemo();
        }

        function closeHelp() {
            document.getElementById('helpModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Bot functions
        function sendUserMessage() {
            const input = document.getElementById('helpInput');
            const message = input.value.trim();
            if (!message) return;

            addUserMessage(message);
            input.value = '';

            // Bot response
            setTimeout(() => {
                const response = getBotResponse(message);
                addBotMessage(response);
            }, 1000);
        }

        function sendBotMessage(message) {
            const response = getBotResponse(message);
            addBotMessage(response);
        }

        function getBotResponse(message) {
            const lowerMessage = message.toLowerCase();
            for (const [key, response] of Object.entries(botResponses)) {
                if (lowerMessage.includes(key.toLowerCase())) {
                    return response;
                }
            }
            return botResponses.default;
        }

        function addUserMessage(text) {
            const messagesDiv = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message user-message';
            messageDiv.textContent = text;
            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function addBotMessage(text) {
            const messagesDiv = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message bot-message';
            messageDiv.textContent = text;
            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function handleHelpKeyPress(event) {
            if (event.key === 'Enter') {
                sendUserMessage();
            }
        }

        // Demo functions
        function startAutoPlay() {
            if (autoPlayInterval) {
                clearInterval(autoPlayInterval);
            }

            autoPlayInterval = setInterval(() => {
                if (currentScene < totalScenes) {
                    nextScene();
                } else {
                    // Celebration at the end
                    addCelebration();
                    setTimeout(() => {
                        restartDemo();
                    }, 2000);
                }
            }, sceneDuration);
        }

        function restartDemo() {
            if (autoPlayInterval) {
                clearInterval(autoPlayInterval);
            }

            for (let i = 1; i <= totalScenes; i++) {
                document.getElementById(`scene${i}`).classList.remove('active');
            }

            currentScene = 1;
            document.getElementById('scene1').classList.add('active');
            startAutoPlay();
        }

        function goToDashboard() {
            if (autoPlayInterval) {
                clearInterval(autoPlayInterval);
            }

            for (let i = 1; i <= totalScenes; i++) {
                document.getElementById(`scene${i}`).classList.remove('active');
            }

            currentScene = 2;
            document.getElementById('scene2').classList.add('active');
            highlightDashboardItem();

            // Resume autoplay after 5 seconds
            setTimeout(() => {
                startAutoPlay();
            }, 5000);
        }

        function nextScene() {
            if (currentScene < totalScenes) {
                performSceneAction(currentScene);
                document.getElementById(`scene${currentScene}`).classList.remove('active');
                currentScene++;
                document.getElementById(`scene${currentScene}`).classList.add('active');
                addSceneTransition();
            }
        }

        function performSceneAction(sceneNumber) {
            switch (sceneNumber) {
                case 1: simulateTyping(); break;
                case 2: highlightDashboardItem(); break;
                case 3: simulateMatching(); break;
                case 4: simulateNewMessage(); break;
                case 5: simulateMarketplaceItem(); break;
                case 6: simulateStudySession(); break;
            }
        }

        function initDemo() {
            setTimeout(() => {
                startAutoPlay();
                setupSceneAnimations();
            }, 500);
        }

        function simulateTyping() {
            const inputs = document.querySelectorAll('.form-input');
            inputs.forEach((input, index) => {
                setTimeout(() => {
                    input.style.boxShadow = '0 0 0 2px var(--sparkle-pink)';
                    setTimeout(() => {
                        input.style.boxShadow = 'none';
                    }, 500);
                }, index * 300);
            });
        }

        function highlightDashboardItem() {
            const icons = document.querySelectorAll('.app-icon');
            const randomIcon = icons[Math.floor(Math.random() * icons.length)];
            randomIcon.style.transform = 'scale(1.05)';
            randomIcon.style.boxShadow = '0 5px 20px rgba(255, 61, 109, 0.3)';
            randomIcon.style.background = 'var(--sparkle-gradient)';
            randomIcon.style.color = 'white';

            setTimeout(() => {
                randomIcon.style.transform = 'scale(1)';
                randomIcon.style.boxShadow = 'none';
                randomIcon.style.background = '';
                randomIcon.style.color = '';
            }, 1000);
        }

        function simulateMatching() {
            const categories = document.querySelectorAll('.app-grid > div');
            categories.forEach((cat, index) => {
                setTimeout(() => {
                    cat.style.transform = 'translateY(-5px)';
                    cat.style.boxShadow = '0 10px 25px rgba(236, 72, 153, 0.2)';
                    setTimeout(() => {
                        cat.style.transform = 'translateY(0)';
                        cat.style.boxShadow = 'none';
                    }, 300);
                }, index * 300);
            });
        }

        function simulateNewMessage() {
            const conversations = document.querySelector('.conversations');
            const newMessage = document.createElement('div');
            newMessage.className = 'conversation-item';
            newMessage.innerHTML = `
                <div class="conversation-avatar">YT</div>
                <div style="flex: 1;">
                    <div style="font-weight: 700; color: var(--sparkle-pink);">You</div>
                    <div style="color: var(--app-text-light); font-size: 0.9rem;">This app is amazing! 🎉</div>
                </div>
                <div style="color: var(--sparkle-pink); font-size: 0.8rem; font-weight: 600;">now</div>
            `;
            newMessage.style.opacity = '0';
            newMessage.style.transform = 'translateX(-20px)';
            conversations.insertBefore(newMessage, conversations.firstChild);

            setTimeout(() => {
                newMessage.style.opacity = '1';
                newMessage.style.transform = 'translateX(0)';
                newMessage.style.transition = 'all 0.5s ease';
            }, 10);
        }

        function simulateMarketplaceItem() {
            const items = document.querySelectorAll('.app-grid > div');
            const randomItem = items[Math.floor(Math.random() * items.length)];
            randomItem.style.transform = 'scale(1.05)';
            randomItem.style.boxShadow = '0 10px 25px rgba(236, 72, 153, 0.3)';

            setTimeout(() => {
                randomItem.style.transform = 'scale(1)';
                randomItem.style.boxShadow = 'none';
            }, 1000);
        }

        function simulateStudySession() {
            const studyGroup = document.querySelector('.dashboard-content > div');
            if (studyGroup) {
                studyGroup.style.transform = 'translateY(-5px)';
                studyGroup.style.boxShadow = '0 10px 25px rgba(236, 72, 153, 0.2)';

                setTimeout(() => {
                    studyGroup.style.transform = 'translateY(0)';
                    studyGroup.style.boxShadow = 'none';
                }, 1000);
            }
        }

        function setupSceneAnimations() {
            // Add floating particles to final scene
            const finalScreen = document.getElementById('scene7');
            setInterval(() => {
                addSparkleParticle(finalScreen);
            }, 300);
        }

        function addSceneTransition() {
            const scene = document.getElementById(`scene${currentScene}`);
            for (let i = 0; i < 3; i++) {
                setTimeout(() => {
                    addMiniSparkle(scene);
                }, i * 200);
            }
        }

        function addMiniSparkle(container) {
            const sparkle = document.createElement('div');
            sparkle.className = 'cheer-particle';
            sparkle.innerHTML = '✨';
            sparkle.style.left = `${Math.random() * 80 + 10}%`;
            sparkle.style.top = `${Math.random() * 80 + 10}%`;
            sparkle.style.fontSize = '1rem';
            container.appendChild(sparkle);

            setTimeout(() => sparkle.remove(), 2000);
        }

        function addSparkleParticle(container) {
            const particle = document.createElement('div');
            particle.className = 'cheer-particle';
            particle.innerHTML = '✨';
            particle.style.left = `${Math.random() * 100}%`;
            particle.style.top = `${Math.random() * 100}%`;
            particle.style.fontSize = `${Math.random() * 1 + 0.5}rem`;
            container.appendChild(particle);

            setTimeout(() => particle.remove(), 2000);
        }

        function addCelebration() {
            const finalScreen = document.getElementById('scene7');
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const emoji = document.createElement('div');
                    emoji.className = 'cheer-particle';
                    emoji.innerHTML = ['🎉', '✨', '🌟', '🥳', '💖'][Math.floor(Math.random() * 5)];
                    emoji.style.left = `${Math.random() * 100}%`;
                    emoji.style.top = `${Math.random() * 100}%`;
                    emoji.style.fontSize = `${Math.random() * 2 + 1}rem`;
                    finalScreen.appendChild(emoji);

                    setTimeout(() => emoji.remove(), 2000);
                }, i * 100);
            }
        }

        // Navigation functions
        function toggleMobileMenu() {
            const navLinks = document.getElementById('navLinks');
            navLinks.classList.toggle('active');
        }

        // Event listeners
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                closeDemo();
                closeHelp();
            }
        });

        // Close modals on outside click
        document.getElementById('demoModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeDemo();
            }
        });

        document.getElementById('helpModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeHelp();
            }
        });

        // Initialize on load
        document.addEventListener('DOMContentLoaded', function () {
            // Add initial bot message
            setTimeout(() => {
                addBotMessage("Welcome to Sparkle Support! I'm here to help you with:");
                addBotMessage("• Account setup and verification");
                addBotMessage("• Using Sparkle features");
                addBotMessage("• Campus safety and privacy");
                addBotMessage("• Reporting issues");
                addBotMessage("What would you like to know?");
            }, 500);

            // Adjust for mobile
            if (window.innerWidth <= 768) {
                const style = document.createElement('style');
                style.textContent = `
                    .mobile-nav-container { display: flex !important; }
                    .restart-btn { background: linear-gradient(135deg, #4CAF50, #2E7D32) !important; }
                `;
                document.head.appendChild(style);
            }
        });
    </script>
</body>

</html>
