            min-height: 100vh;
            color: var(--text-color);
            overflow-x: hidden;
        }

        /* Header */
        .demo-header {
            text-align: center;
            padding: 40px 20px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 5px 20px rgba(255, 0, 102, 0.1);
            border-bottom: 3px solid var(--primary-pink);
        }

        .demo-header h1 {
            font-size: 3.5rem;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 800;
            margin-bottom: 15px;
            animation: titlePulse 2s ease-in-out infinite;
        }

        @keyframes titlePulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }

        .demo-header p {
            color: var(--dark-pink);
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Demo Container */
        .demo-container {
            max-width: 1400px;
            margin: 40px auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 40px;
        }

        /* Video Player Area */
        .video-player {
            width: 100%;
            max-width: 1000px;
            background: white;
            border-radius: 25px;
            padding: 30px;
            box-shadow: 0 20px 50px rgba(255, 0, 102, 0.25);
            position: relative;
            overflow: hidden;
            border: 5px solid white;
        }

        .video-player::before {
            content: '';
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            background: linear-gradient(45deg, 
                var(--primary-pink), 
                var(--hot-pink), 
                var(--sparkle-gold), 
                var(--primary-pink));
            border-radius: 30px;
            z-index: -1;
            animation: borderGlow 4s linear infinite;
            background-size: 300% 300%;
        }

        @keyframes borderGlow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Demo Screen - Simulated App Interface */
        .demo-screen {
            width: 100%;
            height: 600px;
            background: #f8f9fa;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
            box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }

        /* Demo Top Bar */
        .demo-top-bar {
            background: var(--gradient);
            padding: 15px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
        }

        .demo-time {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .demo-battery {
            width: 30px;
            height: 15px;
            border: 2px solid white;
            border-radius: 4px;
            position: relative;
        }

        .demo-battery::after {
            content: '';
            position: absolute;
            right: -5px;
            top: 3px;
            width: 4px;
            height: 7px;
            background: white;
            border-radius: 2px;
        }

        .demo-battery-level {
            width: 80%;
            height: 100%;
            background: white;
        }

        /* Demo App Content */
        .demo-content {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background: white;
        }

        /* Demo Scene - Different app screens */
        .demo-scene {
            width: 100%;
            height: 100%;
            display: none;
            flex-direction: column;
        }

        .demo-scene.active {
            display: flex;
            animation: sceneFade 0.5s ease;
        }

        @keyframes sceneFade {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Welcome Screen */
        .welcome-screen {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            gap: 30px;
        }

        .sparkle-logo {
            font-size: 5rem;
            color: var(--primary-pink);
            animation: logoFloat 3s ease-in-out infinite;
        }

        @keyframes logoFloat {
            0%, 100% { transform: translateY(0) rotate(0); }
            25% { transform: translateY(-20px) rotate(5deg); }
            75% { transform: translateY(-10px) rotate(-5deg); }
        }

        .welcome-text h2 {
            font-size: 2.5rem;
            color: var(--dark-pink);
            margin-bottom: 10px;
        }

        /* Signup Form */
        .signup-form {
            width: 100%;
            max-width: 400px;
            background: var(--light-pink);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(255, 77, 141, 0.2);
        }

        .form-input {
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            border: 2px solid var(--secondary-pink);
            border-radius: 10px;
            font-size: 1rem;
            background: white;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-pink);
        }

        /* Dashboard Screen */
        .dashboard-screen {
            display: flex;
            height: 100%;
        }

        .demo-sidebar {
            width: 250px;
            background: var(--light-pink);
            padding: 20px;
            border-right: 3px solid var(--primary-pink);
        }

        .demo-nav-item {
            padding: 15px;
            margin-bottom: 10px;
            background: white;
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
        }

        .demo-nav-item:hover {
            background: var(--primary-pink);
            color: white;
            transform: translateX(5px);
        }

        .demo-nav-item.active {
            background: var(--gradient);
            color: white;
            box-shadow: 0 5px 15px rgba(255, 0, 102, 0.3);
        }

        .main-content {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }

        /* Post Story Screen */
        .post-story {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 30px;
        }

        .story-camera {
            width: 300px;
            height: 300px;
            border-radius: 20px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            position: relative;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .camera-view {
            width: 100%;
            height: 100%;
            background: url('https://images.unsplash.com/photo-1529156069898-49953e39b3ac?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .camera-controls {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 20px;
        }

        .camera-btn {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: var(--primary-pink);
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        /* Messages Screen */
        .messages-screen {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .chat-list {
            flex: 1;
            overflow-y: auto;
        }

        .chat-item {
            padding: 15px;
            border-bottom: 1px solid var(--light-pink);
            display: flex;
            align-items: center;
            gap: 15px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .chat-item:hover {
            background: var(--light-pink);
        }

        .chat-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .chat-info h4 {
            color: var(--dark-pink);
            margin-bottom: 5px;
        }

        /* Moments Screen */
        .moments-screen {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .moment-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(255, 77, 141, 0.1);
            margin-bottom: 20px;
            animation: cardAppear 0.5s ease;
        }

        @keyframes cardAppear {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .moment-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .moment-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--gradient);
        }

        .moment-content {
            margin: 15px 0;
        }

        .moment-actions {
            display: flex;
            gap: 20px;
            padding-top: 15px;
            border-top: 1px solid var(--light-pink);
        }

        .action-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--dark-pink);
            cursor: pointer;
            transition: color 0.3s;
        }

        .action-btn:hover {
            color: var(--primary-pink);
        }

        /* Cheer Animation */
        .cheer-container {
            position: absolute;
            bottom: 100px;
            right: 50px;
        }

        .cheer-btn {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: var(--gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            cursor: pointer;
            box-shadow: 0 10px 25px rgba(255, 0, 102, 0.3);
            animation: cheerPulse 2s ease-in-out infinite;
        }

        @keyframes cheerPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        /* Demo Controls */
        .demo-controls {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 30px;
            padding: 30px;
            background: white;
            border-radius: 25px;
            box-shadow: 0 10px 30px rgba(255, 0, 102, 0.15);
            width: 100%;
            max-width: 1000px;
        }

        .control-btn {
            padding: 15px 30px;
            background: var(--gradient);
            color: white;
            border: none;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
            box-shadow: 0 5px 15px rgba(255, 0, 102, 0.2);
        }

        .control-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 0, 102, 0.3);
        }

        .control-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }

        .demo-progress {
            flex: 1;
            max-width: 500px;
            background: var(--light-pink);
            height: 10px;
            border-radius: 5px;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: var(--gradient);
            width: 0%;
            transition: width 0.5s ease;
            border-radius: 5px;
        }

        /* Demo Steps Indicator */
        .demo-steps {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .step-indicator {
            width: 15px;
            height: 15px;
            border-radius: 50%;
            background: var(--light-pink);
            transition: all 0.3s;
        }

        .step-indicator.active {
            background: var(--primary-pink);
            transform: scale(1.3);
            box-shadow: 0 0 10px var(--primary-pink);
        }

        /* Cheer Animation Overlay */
        .cheer-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1000;
            display: none;
        }

        .cheer-particle {
            position: absolute;
            font-size: 2rem;
            animation: cheerFloat 2s ease-out forwards;
        }

        @keyframes cheerFloat {
            0% {
                opacity: 1;
                transform: translateY(0) rotate(0deg) scale(1);
            }
            100% {
                opacity: 0;
                transform: translateY(-100px) rotate(360deg) scale(0);
            }
        }

        /* Timeline */
        .demo-timeline {
            width: 100%;
            max-width: 1000px;
            background: white;
            padding: 30px;
            border-radius: 25px;
            box-shadow: 0 10px 30px rgba(255, 0, 102, 0.15);
        }

        .timeline-title {
            color: var(--dark-pink);
            margin-bottom: 30px;
            text-align: center;
            font-size: 1.8rem;
        }

        .timeline-steps {
            display: flex;
            justify-content: space-between;
            position: relative;
        }

        .timeline-steps::before {
            content: '';
            position: absolute;
            top: 25px;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--light-pink);
            z-index: 1;
        }

        .timeline-step {
            display: flex;
            flex-direction: column;
            align-items: center;
            z-index: 2;
            position: relative;
            width: 120px;
        }

        .timeline-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--light-pink);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: var(--dark-pink);
            margin-bottom: 15px;
            transition: all 0.3s;
        }

        .timeline-step.active .timeline-icon {
            background: var(--gradient);
            color: white;
            transform: scale(1.2);
            box-shadow: 0 5px 20px rgba(255, 0, 102, 0.3);
        }

        .timeline-step.completed .timeline-icon {
            background: var(--gradient);
            color: white;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .demo-screen {
                height: 500px;
            }

            .demo-header h1 {
                font-size: 2.5rem;
            }

            .control-btn {
                padding: 12px 20px;
                font-size: 0.9rem;
            }

            .demo-controls {
                flex-direction: column;
                gap: 20px;
            }

            .demo-progress {
                width: 100%;
            }

            .timeline-steps {
                flex-wrap: wrap;
                justify-content: center;
                gap: 30px;
            }

            .timeline-steps::before {
                display: none;
            }
        }

        @media (max-width: 480px) {
            .demo-screen {
                height: 400px;
            }

            .sparkle-logo {
                font-size: 3rem;
            }

            .welcome-text h2 {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
