<%- include('partials/head', { title: 'Lost & Found' }) %>

    <body>
        <%- include('partials/sidebar') %>

            <!-- Main Content Container -->
            <div class="container" id="mainContent">
                <!-- Lost & Found Page -->
                <div id="lostFoundPage" class="page active">
                    <div class="header glass">
                        <div style="display:flex; align-items:center; gap:10px;">
                            <div class="hamburger-btn" onclick="window.location.href='/dashboard'">
                                <i class="fas fa-chevron-left"></i>
                            </div>
                            <div class="logo-text">Lost & Found</div>
                            <div class="groups-backend-status">
                                <i class="fas fa-check-circle"></i>
                                <span class="d-none d-sm-inline">Active</span>
                            </div>
                        </div>
                    </div>

                    <div id="lostFoundItems" class="discover-grid" style="padding-bottom: 80px;">
                        <% if (typeof initialItems !=='undefined' && initialItems.length> 0) { %>
                            <% initialItems.forEach(item=> { %>
                                <div class="discover-card">
                                    <div class="discover-card-banner"
                                        style="height: 80px; background: <%= item.item_type === 'lost' ? 'linear-gradient(135deg, #ff6b6b, #ee5a5a)' : 'linear-gradient(135deg, #51cf66, #40c057)' %>; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-<%= item.item_type === 'lost' ? 'exclamation-triangle' : 'hand-holding-heart' %>"
                                            style="font-size: 32px; color: white;"></i>
                                    </div>
                                    <div class="discover-card-content">
                                        <div class="discover-card-badge"
                                            style="position: static; margin-bottom: 10px; background: <%= item.item_type === 'lost' ? '#ff6b6b' : '#51cf66' %>;">
                                            <%= item.item_type==='lost' ? 'LOST' : 'FOUND' %>
                                        </div>
                                        <h3 class="discover-card-name">
                                            <%= item.item_name %>
                                        </h3>
                                        <p class="discover-card-bio"
                                            style="display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                            <%= item.description || 'No description provided' %>
                                        </p>
                                        <div
                                            style="display: flex; align-items: center; gap: 8px; margin-top: 10px; font-size: 12px; color: var(--text-secondary);">
                                            <i class="fas fa-map-marker-alt" style="color: var(--primary);"></i>
                                            <%= item.location || 'Unknown location' %>
                                        </div>
                                        <div
                                            style="display: flex; justify-content: space-between; margin-top: 10px; padding-top: 10px; border-top: 1px solid var(--border); font-size: 11px; color: var(--text-secondary);">
                                            <span>by @<%= item.reporter_username %></span>
                                            <span>
                                                <%= new Date(item.created_at).toLocaleDateString() %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="discover-empty-state">
                                            <i class="fas fa-search"></i>
                                            <h4>No items reported yet</h4>
                                            <p>Be the first to report a lost or found item on campus!</p>
                                        </div>
                                        <% } %>
                    </div>

                    <button class="fab-btn" onclick="reportLostItem()">
                        <i class="fas fa-bullhorn"></i>
                    </button>
                </div>
            </div>

            <!-- Modals -->
            <%- include('partials/dashboard-modals') %>
                    <script src="/js/dashboardAPI.js"></script>
    </body>

    </html>
