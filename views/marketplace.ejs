                                <i class="fas fa-bell"></i>
                                <span class="notification-badge" id="notificationCount">0</span>
                            </button>

                            <!-- Filter -->
                            <button class="nav-action-btn" id="filterBtn" data-bs-toggle="tooltip" title="Filters">
                                <i class="fas fa-filter"></i>
                            </button>

