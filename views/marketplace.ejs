    <body class="premium-marketplace">
        <%- include('partials/sidebar') %>

            <!-- Instagram Marketplace Container -->
            <div class="container-fluid p-0">
                <!-- Instagram Navigation -->
                <nav class="marketplace-nav">
                    <div class="marketplace-nav-content">
                        <!-- Brand -->
                        <div class="nav-brand">
                            <i class="fas fa-store"></i>
                            <span>Instagram Marketplace</span>
                        </div>

