        .form-range::-moz-range-thumb {
            width: 22px;
            height: 22px;
            background: #E1306C;
            border-radius: 50%;
            cursor: pointer;
            border: 3px solid white;
            box-shadow: 0 2px 6px rgba(225, 48, 108, 0.3);
