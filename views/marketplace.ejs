                                                    <button class="btn btn-outline-primary"
                                                        onclick="contactSeller('<%= listing.seller_id %>', '<%= listing.listing_id %>')">
                                                        <i class="fas fa-envelope me-1"></i>Message
                                                    </button>
                                                    <button class="btn btn-premium"
                                                        onclick="quickView('<%= listing.listing_id %>')">
                                                        <i class="fas fa-shopping-cart me-1"></i>View Details
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } %>
                    </div>

