            }

            .listing-stats {
                justify-content: space-around;
            }

            .listing-actions {
                flex-direction: column;
                gap: 8px;
            }

            .listing-actions .btn {
                width: 100%;
                justify-content: center;
            }

            .premium-toast {
                left: 15px;
                right: 15px;
                min-width: auto;
                max-width: none;
                padding: 15px;
            }

            .filter-section {
                padding: 15px;
            }

            .filter-actions {
                padding: 15px;
            }

            .notifications-dropdown {
