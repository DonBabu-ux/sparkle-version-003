<%- include('partials/head', { title: 'Marketplace' }) %>


    <body>
        <%- include('partials/sidebar') %>

            <!-- Main Content Container -->
            <div class="container" id="mainContent">
                <!-- Marketplace Page -->
                <div id="marketplacePage" class="page active">
                    <div class="header glass">
                        <div style="display:flex; align-items:center; gap:10px;">
                            <div class="hamburger-btn" onclick="window.location.href='/'">
                                <i class="fas fa-chevron-left"></i>
                            </div>
                            <div class="logo-text">Marketplace</div>
                        </div>
                        <button class="btn btn-primary" id="createListingBtn" style="border-radius: 14px;">
                            <i class="fas fa-plus"></i> <span class="d-none d-sm-inline">Sell Item</span>
                        </button>
                    </div>

                    <div class="premium-tabs">
                        <button class="premium-tab-btn active" onclick="loadMarketplace('all')">All</button>
                        <button class="premium-tab-btn" onclick="loadMarketplace('student_market')">Student
                            Market</button>
                        <button class="premium-tab-btn" onclick="loadMarketplace('secondhand')">Second-Hand</button>
                        <button class="premium-tab-btn" onclick="loadMarketplace('services')">Services</button>
                    </div>

                    <div class="discover-grid" id="marketplaceContent" style="padding-bottom: 80px;">
                        <% if (typeof initialListings !=='undefined' && initialListings.length> 0) { %>
                            <% initialListings.forEach(listing=> {
                                let images = [];
                                try {
                                if (typeof listing.image_urls === 'string') {
                                images = JSON.parse(listing.image_urls);
                                } else {
                                images = listing.image_urls || [];
                                }
                                } catch(e) {
                                images = listing.image_urls ? [listing.image_urls] : [];
                                }
                                const firstImage = Array.isArray(images) && images.length > 0 ? images[0] :
                                'https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=400';
                                %>
                                <div class="discover-card" data-listing-id="<%= listing.listing_id %>">
                                    <div class="discover-card-banner">
                                        <img src="<%= firstImage %>" alt="<%= listing.title %>">
                                        <div class="discover-card-badge"
                                            style="background: var(--primary-gradient); position: absolute; top: 12px; right: 12px;">
                                            $<%= listing.price %>
                                        </div>
                                    </div>
                                    <div class="discover-card-content">
                                        <h3 class="discover-card-name">
                                            <%= listing.title %>
                                        </h3>
                                        <p class="discover-card-bio" style="font-size: 13px; -webkit-line-clamp: 2;">
                                            <%= listing.description || '' %>
                                        </p>

                                        <div
                                            style="display: flex; align-items: center; gap: 8px; margin-top: 12px; padding-top: 12px; border-top: 1px solid var(--border);">
                                            <div
                                                style="width: 24px; height: 24px; border-radius: 50%; background: var(--border); overflow: hidden;">
                                                <img src="/uploads/avatars/default.png"
                                                    style="width: 100%; height: 100%; object-fit: cover;">
                                            </div>
                                            <span
                                                style="font-size: 12px; font-weight: 600; color: var(--text-secondary);">
                                                <%= listing.seller_username %>
                                            </span>
                                        </div>

                                        <button class="btn btn-outline-primary btn-sm"
                                            style="width: 100%; margin-top: 15px; border-radius: 10px;"
                                            onclick="window.location.href='/messages?user=<%= listing.seller_id %>'">
                                            <i class="far fa-envelope"></i> Contact Seller
                                        </button>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="discover-empty-state">
                                            <i class="fas fa-shopping-bag"></i>
                                            <h4>No listings yet</h4>
                                            <p>Be the first to sell something on campus!</p>
                                        </div>
                                        <% } %>
                    </div>
                </div>
            </div>

            <%- include('partials/dashboard-modals') %>
                    <script src="/js/dashboardAPI.js"></script>
    </body>

    </html>
