<%- include('partials/head', { title: 'Instagram Marketplace | Buy & Sell' }) %>

    <!-- Add these meta tags for socket connection -->
    <meta name="user-id" content="<%= user?.user_id || '' %>">
    <meta name="user-campus" content="<%= user?.campus || 'main_campus' %>">

    <style>
        /* Add socket status styles */
        .socket-status {
            position: fixed;
            bottom: 10px;
            right: 10px;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 12px;
            z-index: 10000;
            background: rgba(0, 0, 0, 0.7);
            color: white;
        }

        .socket-status.connected {
            background: rgba(76, 175, 80, 0.8);
        }

        .socket-status.disconnected {
            background: rgba(244, 67, 54, 0.8);
        }

        /* Add chat modal styles */
        .chat-modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 90%;
            max-width: 500px;
            max-height: 80vh;
            background: white;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-lg);
            z-index: 1100;
            display: none;
            flex-direction: column;
            border: 1px solid #ffd6e0;
        }

        .chat-modal.active {
            display: flex;
        }

        .chat-header {
            background: var(--gradient-primary);
            color: white;
            padding: 15px 20px;
            border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .chat-messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            max-height: 400px;
        }

        .message {
            margin-bottom: 15px;
            max-width: 80%;
        }

        .message.sent {
            margin-left: auto;
        }

        .message-content {
            padding: 10px 15px;
            border-radius: 18px;
            background: #fff0f5;
            color: #262626;
            word-wrap: break-word;
        }

        .message.sent .message-content {
            background: var(--gradient-primary);
            color: white;
        }

        .message-time {
            font-size: 11px;
            color: #E1306C;
            margin-top: 4px;
            text-align: right;
        }

        .message.sent .message-time {
            color: white;
            opacity: 0.8;
        }

        .chat-input-container {
            padding: 15px;
            border-top: 1px solid #ffd6e0;
            background: #fff0f5;
        }

        .chat-input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #ffd6e0;
            border-radius: var(--border-radius-xl);
            font-size: 14px;
            resize: none;
        }

        .chat-input:focus {
            outline: none;
            border-color: #E1306C;
        }

        .typing-indicator {
            font-size: 12px;
            color: #E1306C;
            padding: 5px 15px;
            display: none;
        }

        .typing-indicator.active {
            display: block;
        }

        /* Quick view modal */
        .quick-view-modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 90%;
            max-width: 800px;
            max-height: 90vh;
            background: white;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-lg);
            z-index: 1100;
            display: none;
            overflow: hidden;
        }

        .quick-view-modal.active {
            display: block;
        }

        .quick-view-content {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        @media (min-width: 768px) {
            .quick-view-content {
                flex-direction: row;
            }
        }

        .quick-view-images {
            flex: 1;
            min-height: 300px;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .quick-view-images img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .quick-view-details {
            flex: 1;
            padding: 25px;
            overflow-y: auto;
        }

        /* Real-time notification badge */
        .realtime-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #FFDC80;
            color: #262626;
            font-size: 10px;
            font-weight: 700;
            min-width: 18px;
            height: 18px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #E1306C;
            animation: pulse 2s infinite;
        }

        /* All your existing styles remain the same below... */
        /* Instagram Pink Theme Marketplace Styles */
        :root {
            --primary: #E1306C;
            --secondary: #833AB4;
            --accent: #FFDC80;
            --success: #00c853;
            --warning: #ff9800;
            --danger: #ff1744;
            --dark: #262626;
            --light: #fafafa;
            --gradient-primary: linear-gradient(45deg, #E1306C 0%, #833AB4 100%);
            --gradient-secondary: linear-gradient(45deg, #405DE6 0%, #833AB4 100%);
            --gradient-accent: linear-gradient(45deg, #FFDC80 0%, #F56040 100%);
            --shadow-sm: 0 2px 8px rgba(225, 48, 108, 0.1);
            --shadow-md: 0 4px 20px rgba(225, 48, 108, 0.15);
            --shadow-lg: 0 10px 40px rgba(225, 48, 108, 0.2);
            --shadow-glow: 0 0 20px rgba(225, 48, 108, 0.3);
            --border-radius: 12px;
            --border-radius-lg: 20px;
            --border-radius-xl: 30px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Glassmorphism utility */
        .glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 225, 225, 0.5);
            box-shadow: 0 8px 32px 0 rgba(225, 48, 108, 0.1);
        }

        .glass-dark {
            background: rgba(38, 38, 38, 0.8);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Instagram Pink Marketplace Layout */
        .premium-marketplace {
            background: linear-gradient(135deg, #fafafa 0%, #f5f5f7 100%);
            min-height: 100vh;
        }

        /* Instagram Navigation */
        .marketplace-nav {
            background: var(--gradient-primary);
            padding: 15px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: var(--shadow-md);
            border-radius: 0 0 var(--border-radius-lg) var(--border-radius-lg);
        }

        .marketplace-nav-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
            font-weight: 800;
            font-size: 24px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .nav-brand i {
            font-size: 28px;
            background: rgba(255, 255, 255, 0.2);
            padding: 10px;
            border-radius: 50%;
            backdrop-filter: blur(10px);
        }

        .search-and-filter {
            flex: 1;
            max-width: 600px;
            margin: 0 30px;
            position: relative;
        }

        .marketplace-search {
            width: 100%;
            background: rgba(255, 255, 255, 0.95);
            border: 2px solid transparent;
            border-radius: var(--border-radius-xl);
            padding: 14px 50px 14px 25px;
            font-size: 15px;
            color: var(--dark);
            transition: var(--transition);
            box-shadow: var(--shadow-sm);
        }

        .marketplace-search:focus {
            outline: none;
            border-color: #E1306C;
            box-shadow: var(--shadow-glow);
            transform: translateY(-1px);
        }

        .search-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary);
            font-size: 18px;
        }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .nav-action-btn {
            position: relative;
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            cursor: pointer;
            transition: var(--transition);
            backdrop-filter: blur(10px);
        }

        .nav-action-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-3px) scale(1.05);
            border-color: rgba(255, 255, 255, 0.5);
            box-shadow: var(--shadow-lg);
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--accent);
            color: #262626;
            font-size: 11px;
            font-weight: 700;
            width: 22px;
            height: 22px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--primary);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        .btn-premium {
            background: var(--gradient-primary);
            border: none;
            color: white;
            font-weight: 600;
            padding: 12px 28px;
            border-radius: var(--border-radius-xl);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .btn-premium:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-glow);
            color: white;
        }

        .btn-premium:before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn-premium:hover:before {
            left: 100%;
        }

        /* Instagram Tabs */
        .premium-tabs {
            display: flex;
            overflow-x: auto;
            gap: 15px;
            padding: 25px 0;
            margin-bottom: 30px;
            scrollbar-width: none;
        }

        .premium-tabs::-webkit-scrollbar {
            display: none;
        }

        .premium-tab-btn {
            background: white;
            border: 2px solid #ffd6e0;
            border-radius: var(--border-radius-xl);
            padding: 12px 28px;
            font-weight: 700;
            color: var(--dark);
            cursor: pointer;
            white-space: nowrap;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .premium-tab-btn:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--gradient-primary);
            opacity: 0;
            transition: var(--transition);
        }

        .premium-tab-btn.active {
            background: var(--gradient-primary);
            border-color: transparent;
            color: white;
            transform: translateY(-3px) scale(1.05);
            box-shadow: var(--shadow-glow);
        }

        .premium-tab-btn:hover:not(.active) {
            border-color: var(--primary);
            color: var(--primary);
            transform: translateY(-2px);
            background: rgba(225, 48, 108, 0.05);
        }

        .premium-tab-btn.active:before {
            opacity: 1;
        }

        .premium-tab-btn.active-glow {
            animation: glow 3s infinite;
        }

        @keyframes glow {

            0%,
            100% {
                box-shadow: 0 0 20px rgba(225, 48, 108, 0.3);
            }

            50% {
                box-shadow: 0 0 30px rgba(225, 48, 108, 0.6);
            }
        }

        /* Instagram Listings Grid */
        .marketplace-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px 50px;
        }

        .listings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        /* Instagram Listing Card */
        .listing-card {
            background: white;
            border-radius: var(--border-radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
            position: relative;
            opacity: 0;
            transform: translateY(20px);
            animation: slideUp 0.6s ease forwards;
            border: 1px solid #ffd6e0;
        }

        .listing-card.animate-in {
            opacity: 1;
            transform: translateY(0);
        }

        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .listing-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 45px rgba(225, 48, 108, 0.25);
            border-color: #E1306C;
        }

        .listing-card:after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: var(--gradient-primary);
            z-index: -1;
            border-radius: calc(var(--border-radius-lg) + 2px);
            opacity: 0;
            transition: var(--transition);
        }

        .listing-card:hover:after {
            opacity: 0.3;
        }

        .listing-card-inner {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .listing-image {
            position: relative;
            height: 220px;
            overflow: hidden;
        }

        .listing-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .listing-card:hover .listing-image img {
            transform: scale(1.1);
        }

        .listing-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--gradient-accent);
            color: #262626;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 14px;
            box-shadow: var(--shadow-sm);
        }

        .sold-badge,
        .reserved-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: rgba(225, 48, 108, 0.9);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 14px;
        }

        .reserved-badge {
            background: rgba(131, 58, 180, 0.9);
        }

        .wishlist-btn {
            position: absolute;
            bottom: 15px;
            right: 15px;
            background: rgba(255, 255, 255, 0.9);
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #E1306C;
            cursor: pointer;
            transition: var(--transition);
            font-size: 18px;
        }

        .wishlist-btn.active {
            background: #E1306C;
            color: white;
        }

        .wishlist-btn:hover {
            background: #E1306C;
            color: white;
            transform: scale(1.1);
        }

        .quick-view {
            position: absolute;
            bottom: -60px;
            left: 0;
            right: 0;
            background: var(--gradient-primary);
            color: white;
            padding: 15px;
            text-align: center;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            z-index: 10;
        }

        .listing-card:hover .quick-view {
            bottom: 0;
        }

        /* Empty State Styling - Integrated and Polished */
        .premium-empty-state {
            grid-column: 1 / -1;
            text-align: center;
            padding: 100px 40px;
            background: white;
            border-radius: var(--border-radius-lg);
            border: 2px dashed #ffd6e0;
            margin: 40px auto;
            max-width: 600px;
            box-shadow: var(--shadow-sm);
        }

        .empty-state-icon {
            font-size: 80px;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 25px;
            filter: drop-shadow(0 4px 8px rgba(225, 48, 108, 0.2));
        }

        /* Responsive Design System */
        @media (max-width: 1200px) {
            .listings-grid {
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 25px;
            }
        }

        @media (max-width: 768px) {
            .marketplace-nav-content {
                flex-direction: column;
                padding: 15px;
            }

            .search-and-filter {
                width: 100%;
                margin: 15px 0;
            }

            .nav-actions {
                width: 100%;
                justify-content: center;
                gap: 12px;
            }

            .nav-action-btn {
                flex: 1;
                max-width: 50px;
            }

            .btn-premium {
                padding: 10px 20px;
                font-size: 14px;
            }

            .listings-grid {
                grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
                gap: 15px;
            }

            .listing-image {
                height: 180px;
            }
        }

        @media (max-width: 480px) {
            .listings-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .listing-card {
                max-width: 100%;
            }

            .premium-tabs {
                gap: 10px;
                padding: 15px 5px;
            }

            .premium-tab-btn {
                padding: 8px 16px;
                font-size: 13px;
            }

            .nav-brand {
                font-size: 18px;
            }
        }

        .listing-content {
            padding: 25px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .listing-category {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .category-tag {
            background: #fff0f5;
            color: #E1306C;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .listing-date {
            color: #E1306C;
            font-size: 12px;
        }

        .listing-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 10px;
            line-height: 1.4;
        }

        .listing-description {
            color: #666;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 20px;
            flex: 1;
        }

        .seller-info {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
            padding-top: 20px;
            border-top: 1px solid #ffd6e0;
        }

        .seller-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            overflow: hidden;
            border: 3px solid #fff0f5;
        }

        .seller-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .seller-details {
            flex: 1;
        }

        .seller-name {
            display: block;
            font-weight: 600;
            color: var(--dark);
            font-size: 14px;
        }

        .seller-rating {
            font-size: 12px;
            color: #ffdc80;
        }

        .rating-count {
            color: #E1306C;
            margin-left: 5px;
        }

        .listing-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .listing-stats {
            display: flex;
            gap: 15px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #E1306C;
            font-size: 13px;
        }

        .listing-actions {
            display: flex;
            gap: 10px;
        }

        .listing-actions .btn {
            border-radius: 20px;
            font-size: 13px;
            padding: 8px 16px;
        }

        /* Loading Placeholder */
        .loading-placeholder {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
        }

        .listing-skeleton {
            background: white;
            border-radius: var(--border-radius-lg);
            padding: 25px;
            box-shadow: var(--shadow-sm);
            border: 1px solid #ffd6e0;
        }

        .skeleton-image {
            height: 220px;
            background: linear-gradient(90deg, #fff0f5 25%, #ffd6e0 50%, #fff0f5 75%);
            border-radius: var(--border-radius);
            margin-bottom: 20px;
            animation: shimmer 1.5s infinite;
        }

        .skeleton-title {
            height: 20px;
            background: #fff0f5;
            border-radius: 10px;
            margin-bottom: 10px;
            width: 70%;
        }

        .skeleton-text {
            height: 15px;
            background: #fff0f5;
            border-radius: 10px;
            margin-bottom: 8px;
            width: 90%;
        }

        .skeleton-button {
            height: 40px;
            background: #fff0f5;
            border-radius: 20px;
            margin-top: 20px;
        }

        @keyframes shimmer {
            0% {
                background-position: -200px 0;
            }

            100% {
                background-position: 200px 0;
            }
        }

        /* Instagram Empty State */
        .premium-empty-state {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-md);
            margin: 50px 0;
            border: 1px solid #ffd6e0;
        }

        .empty-state-icon {
            width: 120px;
            height: 120px;
            background: var(--gradient-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            font-size: 50px;
            color: white;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .premium-empty-state h3 {
            font-size: 28px;
            color: #E1306C;
            margin-bottom: 15px;
            font-weight: 700;
        }

        .premium-empty-state p {
            color: #833AB4;
            font-size: 16px;
            margin-bottom: 30px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Instagram Toast Notifications */
        .premium-toast {
            position: fixed;
            top: 100px;
            right: 20px;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 15px;
            min-width: 300px;
            max-width: 400px;
            z-index: 9999;
            transform: translateX(100%);
            opacity: 0;
            transition: var(--transition);
            border-left: 4px solid #E1306C;
            border: 1px solid #ffd6e0;
        }

        .premium-toast.show {
            transform: translateX(0);
            opacity: 1;
        }

        .toast-success {
            border-left-color: var(--success);
        }

        .toast-error {
            border-left-color: #E1306C;
        }

        .toast-info {
            border-left-color: #405DE6;
        }

        .toast-warning {
            border-left-color: #FFDC80;
        }

        .toast-content {
            display: flex;
            align-items: center;
            gap: 12px;
            flex: 1;
        }

        .toast-content i {
            font-size: 20px;
        }

        .toast-success .toast-content i {
            color: var(--success);
        }

        .toast-error .toast-content i {
            color: #E1306C;
        }

        .toast-info .toast-content i {
            color: #405DE6;
        }

        .toast-warning .toast-content i {
            color: #FFDC80;
        }

        .toast-close {
            background: none;
            border: none;
            color: #E1306C;
            cursor: pointer;
            padding: 5px;
            font-size: 14px;
            transition: var(--transition);
        }

        .toast-close:hover {
            color: #833AB4;
        }

        /* Floating Buttons */
        .floating-buttons {
            position: fixed;
            bottom: 30px;
            right: 30px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            z-index: 1000;
        }

        .floating-btn {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: var(--gradient-primary);
            border: none;
            color: white;
            font-size: 20px;
            cursor: pointer;
            box-shadow: var(--shadow-lg);
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
