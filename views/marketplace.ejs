            position: fixed;
            top: 0;
            right: -400px;
            width: 380px;
            height: 100vh;
            background: white;
            box-shadow: var(--shadow-lg);
            z-index: 1100;
            transition: var(--transition);
            overflow-y: auto;
            border-left: 1px solid #ffd6e0;
        }

        .filter-sidebar.active {
            right: 0;
        }

        .filter-header {
            background: var(--gradient-primary);
            color: white;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .filter-header h4 {
            margin: 0;
            font-weight: 600;
            font-size: 18px;
        }

        .filter-header .btn-close {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
            opacity: 0.8;
            transition: var(--transition);
        }

        .filter-header .btn-close:hover {
            opacity: 1;
            transform: rotate(90deg);
        }

        .filter-section {
            padding: 20px;
            border-bottom: 1px solid #ffd6e0;
        }

        .filter-section h6 {
            color: #E1306C;
            font-weight: 600;
            margin-bottom: 15px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .price-range {
            margin-top: 10px;
        }

        .price-range .form-control {
            border: 1px solid #ffd6e0;
            border-radius: var(--border-radius);
            padding: 10px 15px;
            font-size: 14px;
        }

        .price-range .form-control:focus {
            border-color: #E1306C;
            box-shadow: 0 0 0 0.2rem rgba(225, 48, 108, 0.25);
        }

        .form-range {
            width: 100%;
            height: 8px;
            margin-top: 15px;
            background: #ffd6e0;
            border-radius: 4px;
            outline: none;
        }

        .form-range::-webkit-slider-thumb {
