                        <div class="search-and-filter">
                            <input type="text" id="marketplaceSearch" class="marketplace-search"
                                placeholder="Search products, books, services...">
                            <i class="fas fa-search search-icon"></i>
                        </div>

                        <!-- Actions -->
                        <div class="nav-actions">
                            <!-- Home -->
                            <button class="nav-action-btn" onclick="window.location.href='/dashboard'"
