                <div class="filter-section">
                    <h6><i class="fas fa-map-marker-alt me-2"></i>Location</h6>
                    <select id="campusFilter" class="form-select mt-2">
                        <option value="">All Campuses</option>
                        <option value="main_campus">Main Campus</option>
                        <option value="north_campus">North Campus</option>
                        <option value="south_campus">South Campus</option>
                        <option value="downtown">Downtown</option>
                    </select>
                </div>

                <div class="filter-section">
                    <h6><i class="fas fa-sort me-2"></i>Sort By</h6>
                    <select id="sortFilter" class="form-select mt-2">
                        <option value="created_at">Newest First</option>
                        <option value="price">Price: Low to High</option>
                        <option value="price_desc">Price: High to Low</option>
                        <option value="view_count">Most Viewed</option>
                    </select>
                </div>

                <div class="filter-actions mt-4">
                    <button class="btn btn-outline-secondary w-100 mb-2" onclick="clearFilters()">
                        <i class="fas fa-times me-2"></i>Clear All Filters
                    </button>
                    <button class="btn btn-premium w-100" onclick="applyFilters()">
                        <i class="fas fa-check me-2"></i>Apply Filters
                    </button>
                </div>
            </div>

            <!-- Premium Notifications Dropdown -->
            <div class="notifications-dropdown" id="notificationsDropdown">
                <div class="notifications-header">
                    <h5><i class="fas fa-bell me-2"></i>Notifications</h5>
                    <button class="btn btn-link p-0 text-primary" onclick="markAllAsRead()">
                        Mark all read
                    </button>
                </div>
                <div class="notifications-list" id="notificationsList">
                    <!-- Notifications loaded dynamically -->
                </div>
                <div class="notifications-footer">
                    <a href="/notifications" class="btn btn-outline-primary w-100">
                        <i class="fas fa-list me-2"></i>View All Notifications
                    </a>
                </div>
            </div>

            <!-- Chat Modal -->
            <div class="chat-modal" id="chatModal">
                <div class="chat-header">
                    <h5 class="mb-0"><i class="fas fa-comment me-2"></i>Chat</h5>
                    <button class="btn btn-link text-white p-0" onclick="closeChatModal()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="chat-messages" id="chatMessages">
                    <!-- Messages loaded dynamically -->
                </div>
                <div class="typing-indicator" id="typingIndicator"></div>
                <div class="chat-input-container">
                    <textarea class="chat-input" id="chatInput" placeholder="Type your message..." rows="2"></textarea>
                    <button class="btn btn-premium w-100 mt-2" onclick="sendChatMessage()">
                        <i class="fas fa-paper-plane me-2"></i>Send Message
                    </button>
                </div>
            </div>

            <!-- Quick View Modal -->
            <div class="quick-view-modal" id="quickViewModal">
                <div class="quick-view-content">
                    <div class="quick-view-images">
                        <img id="quickViewImage" src="" alt="">
                    </div>
                    <div class="quick-view-details">
                        <button class="btn btn-link text-dark p-0 mb-3" onclick="closeQuickView()">
                            <i class="fas fa-arrow-left me-2"></i>Back
                        </button>
                        <h3 id="quickViewTitle"></h3>
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <span class="category-tag" id="quickViewCategory"></span>
                            <span class="listing-date" id="quickViewDate"></span>
                        </div>
                        <p class="listing-description" id="quickViewDescription"></p>
                        <div class="seller-info">
                            <div class="seller-avatar">
                                <img id="quickViewSellerAvatar" src="" alt="">
                            </div>
                            <div class="seller-details">
                                <span class="seller-name" id="quickViewSellerName"></span>
                                <div class="seller-rating">
                                    <span id="quickViewRating"></span>
                                </div>
                            </div>
                        </div>
                        <div class="listing-footer mt-4">
                            <div class="listing-stats">
                                <span class="stat-item">
                                    <i class="fas fa-eye"></i> <span id="quickViewViews">0</span>
                                </span>
                                <span class="stat-item">
                                    <i class="fas fa-heart"></i> <span id="quickViewLikes">0</span>
                                </span>
                            </div>
                            <div class="listing-actions">
                                <button class="btn btn-outline-primary"
                                    onclick="contactSeller(window.currentListing?.seller_id, window.currentListing?.listing_id)">
                                    <i class="fas fa-envelope me-1"></i>Message
                                </button>
                                <button class="btn btn-premium" id="quickViewBuyBtn">
                                    <i class="fas fa-shopping-cart me-1"></i>Buy Now
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Floating Action Button -->
            <div class="floating-buttons">
                <button class="floating-btn" onclick="scrollToTop()" title="Scroll to top">
                    <i class="fas fa-chevron-up"></i>
                </button>
                <button class="floating-btn" onclick="createListing()" title="Create Listing">
                    <i class="fas fa-plus"></i>
                </button>
                <button class="floating-btn" onclick="openMyListings()" title="My Listings">
                    <i class="fas fa-list"></i>
                </button>
            </div>

            <!-- Socket Connection Status -->
            <div id="socketStatus" class="socket-status disconnected">
                 Connecting...
            </div>

            <!-- Socket.io -->
            <script src="https://cdn.socket.io/4.5.0/socket.io.min.js"></script>

            <!-- Instagram Marketplace JS -->
            <script>
                // ============================================
                // GLOBAL VARIABLES
                // ============================================
                let currentCategory = 'all';
                let currentPage = 1;
                let isLoading = false;
                let hasMore = true;
                let currentFilters = {};
                let currentChat = null;
                let marketplaceSocket = null;
                let currentUserId = '<%= user?.user_id || "" %>';
                let currentUserCampus = '<%= user?.campus || "main_campus" %>';

                // ============================================
                // INITIALIZATION
                // ============================================
                document.addEventListener('DOMContentLoaded', function () {
                    console.log('Marketplace initialized');

                    // Initialize tooltips
                    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                    const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                        return new bootstrap.Tooltip(tooltipTriggerEl);
                    });

                    // Setup event listeners
                    setupEventListeners();

                    // Load marketplace if not pre-rendered
                    const initialCount = document.querySelectorAll('.listing-card').length;
                    if (initialCount === 0) {
                        loadMarketplace('all');
                    } else {
                        // Mark tabs as active if we have initial content
                        const category = new URLSearchParams(window.location.search).get('category') || 'all';
                        document.querySelectorAll('.premium-tab-btn').forEach(btn => {
                            if (btn.getAttribute('data-category') === category) {
                                btn.classList.add('active');
                            } else {
                                btn.classList.remove('active');
                            }
                        });
                    }

                    fetchCounts();

                    // Initialize WebSocket connection
                    initWebSocket();

                    // Initialize price slider
                    initPriceSlider();
                });

                // ============================================
                // EVENT LISTENERS SETUP
                // ============================================
                function setupEventListeners() {
                    // Search input
                    document.getElementById('marketplaceSearch').addEventListener('input', debounce(searchListings, 500));

                    // Filter button
                    document.getElementById('filterBtn').addEventListener('click', openFilterSidebar);

                    // Create listing button
                    document.getElementById('createListingBtn').addEventListener('click', createListing);

                    // Notification button
                    document.getElementById('notificationBtn').addEventListener('click', toggleNotifications);

                    // Messages button
                    document.getElementById('messagesBtn').addEventListener('click', openMyChats);

                    // Favorites button
                    document.getElementById('cartBtn').addEventListener('click', openMyFavorites);

                    // Load more button
                    document.getElementById('loadMoreBtn').addEventListener('click', loadMoreListings);

                    // Category tabs
                    document.querySelectorAll('.premium-tab-btn').forEach(btn => {
                        btn.addEventListener('click', function () {
                            const category = this.getAttribute('data-category');
                            loadMarketplace(category);
                        });
                    });

                    // Modal overlay
                    document.getElementById('modalOverlay').addEventListener('click', closeAllModals);

                    // Chat input enter key
                    document.getElementById('chatInput')?.addEventListener('keypress', function (e) {
                        if (e.key === 'Enter' && !e.shiftKey) {
                            e.preventDefault();
                            sendChatMessage();
                        }
                    });

                    // Chat input typing indicator
                    let typingTimeout;
                    document.getElementById('chatInput')?.addEventListener('input', function () {
                        if (currentChat && marketplaceSocket) {
                            marketplaceSocket.sendTypingIndicator(currentChat, true);

                            clearTimeout(typingTimeout);
                            typingTimeout = setTimeout(() => {
                                marketplaceSocket.sendTypingIndicator(currentChat, false);
                            }, 1000);
                        }
                    });

                    // Window resize
                    window.addEventListener('resize', handleResize);

                    // Before page unload
                    window.addEventListener('beforeunload', () => {
                        if (marketplaceSocket) {
                            marketplaceSocket.disconnect();
                        }
                    });
                }

                // ============================================
                // WEBSOCKET INTEGRATION
                // ============================================
                function initWebSocket() {
                    try {
                        marketplaceSocket = io({
                            auth: {
                                userId: currentUserId,
                                campus: currentUserCampus
                            },
                            reconnection: true,
                            reconnectionAttempts: 5,
                            reconnectionDelay: 1000
                        });

                        setupSocketEvents();
                    } catch (error) {
                        console.error('Failed to initialize WebSocket:', error);
                        showToast('Real-time features unavailable', 'warning');
                    }
                }

                function setupSocketEvents() {
                    if (!marketplaceSocket) return;

                    // Connection events
                    marketplaceSocket.on('connect', () => {
                        console.log(' Connected to Marketplace WebSocket');
                        updateSocketStatus(true);
                        showToast('Connected to real-time updates', 'success');

                        // Join campus room
                        if (currentUserCampus) {
                            marketplaceSocket.joinCampusRoom(currentUserCampus);
                        }
                    });

                    marketplaceSocket.on('disconnect', (reason) => {
                        console.log(' Disconnected from WebSocket:', reason);
                        updateSocketStatus(false);
                    });

                    marketplaceSocket.on('connect_error', (error) => {
                        console.error('WebSocket connection error:', error);
                        updateSocketStatus(false);
                    });

                    // Marketplace events
                    marketplaceSocket.on('new_marketplace_message', handleNewMessage);
                    marketplaceSocket.on('marketplace_listing_added', handleNewListing);
                    marketplaceSocket.on('listing_sold', handleListingSold);
                    marketplaceSocket.on('listing_status_changed', handleListingStatusChange);
                    marketplaceSocket.on('user_marketplace_typing', handleTypingIndicator);
                    marketplaceSocket.on('marketplace_notification', handleNotification);
                    marketplaceSocket.on('chat_message_received', handleChatMessage);
                    marketplaceSocket.on('new_listing_available', handleNewListingAvailable);

                    // Utility events
                    marketplaceSocket.on('message_delivered', handleMessageDelivered);
                    marketplaceSocket.on('message_error', handleMessageError);
                    marketplaceSocket.on('chat_joined', handleChatJoined);
                    marketplaceSocket.on('connected', handleConnected);
                }

                // ============================================
                // MARKETPLACE DATA FUNCTIONS
                // ============================================
                async function fetchMarketplaceData(category = 'all', page = 1, filters = {}) {
                    try {
                        showLoading(true);

                        // Build query parameters
                        const params = new URLSearchParams({
                            category: category,
                            page: page,
                            limit: 12,
                            ...filters
                        });

                        const response = await fetch(`/api/marketplace/listings?${params}`);

                        if (!response.ok) {
                            throw new Error(`HTTP ${response.status}`);
                        }

                        const data = await response.json();

                        showLoading(false);
                        return data;
                    } catch (error) {
                        console.error('Error fetching listings:', error);
                        showToast('Error loading listings', 'error');
                        showLoading(false);
                        return { listings: [], total: 0, hasMore: false };
                    }
                }

                async function fetchCounts() {
                    try {
                        const response = await fetch('/api/marketplace/counts');
                        const data = await response.json();

                        if (data.success) {
                            document.getElementById('favoritesCount').textContent = data.favoritesCount || 0;
                            document.getElementById('notificationCount').textContent = data.notificationCount || 0;

                            // Fetch unread messages count
                            const unreadResponse = await fetch('/api/marketplace/chats/unread');
                            const unreadData = await unreadResponse.json();

                            if (unreadData.success) {
                                document.getElementById('unreadMessagesCount').textContent = unreadData.count || 0;
                            }
                        }
                    } catch (error) {
                        console.error('Error fetching counts:', error);
                    }
                }

                // ============================================
                // UI RENDERING FUNCTIONS
                // ============================================
                async function loadMarketplace(category = 'all') {
                    currentCategory = category;
                    currentPage = 1;
                    hasMore = true;

                    // Update active tab
                    document.querySelectorAll('.premium-tab-btn').forEach(btn => {
                        btn.classList.remove('active', 'active-glow');
                    });
                    const activeTab = document.querySelector(`[data-category="${category}"]`);
                    if (activeTab) {
                        activeTab.classList.add('active', 'active-glow');
                    }

                    // Show loading
                    document.getElementById('loadMoreContainer').style.display = 'none';

                    // Clear current listings
                    const content = document.getElementById('marketplaceContent');
                    content.innerHTML = '';

                    // Fetch data
                    const data = await fetchMarketplaceData(category, currentPage, currentFilters);

                    if (data.listings.length === 0) {
                        showEmptyState();
                        return;
                    }

                    // Render listings
                    data.listings.forEach(listing => {
                        content.appendChild(createListingCard(listing));
                    });

                    // Show load more if applicable
                    if (data.hasMore) {
                        document.getElementById('loadMoreContainer').style.display = 'block';
                    }
                }

                async function loadMoreListings() {
                    if (isLoading || !hasMore) return;

                    isLoading = true;
                    currentPage++;

                    const btn = document.getElementById('loadMoreBtn');
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Loading...';
                    btn.disabled = true;

                    const data = await fetchMarketplaceData(currentCategory, currentPage, currentFilters);

                    if (data.listings.length === 0) {
                        hasMore = false;
                        document.getElementById('loadMoreContainer').style.display = 'none';
                    } else {
                        const content = document.getElementById('marketplaceContent');
                        data.listings.forEach(listing => {
                            content.appendChild(createListingCard(listing));
                        });

                        if (!data.hasMore) {
                            document.getElementById('loadMoreContainer').style.display = 'none';
                        }
                    }

                    btn.innerHTML = '<i class="fas fa-sync-alt me-2"></i>Load More Items';
                    btn.disabled = false;
                    isLoading = false;
                }

                function createListingCard(listing) {
                    const card = document.createElement('div');
                    card.className = 'listing-card';
                    card.setAttribute('data-listing-id', listing.listing_id);
                    card.innerHTML = `
                <div class="listing-card-inner">
                    <div class="listing-image">
                        <img src="${listing.image_url || listing.image_urls?.[0] || '/images/default-listing.jpg'}" 
                             alt="${listing.title}" 
                             onerror="this.src='/images/default-listing.jpg'">
                        ${listing.status === 'sold' ? '<div class="sold-badge"><i class="fas fa-tag me-1"></i>SOLD</div>' : ''}
                        ${listing.status === 'reserved' ? '<div class="reserved-badge"><i class="fas fa-clock me-1"></i>RESERVED</div>' : ''}
                        <div class="listing-badge">$${parseFloat(listing.price).toFixed(2)}</div>
                        <button class="wishlist-btn ${listing.is_favorited ? 'active' : ''}" 
                                onclick="toggleFavorite('${listing.listing_id}', this)">
                            <i class="fas fa-heart"></i>
                        </button>
                        <div class="quick-view" onclick="quickView('${listing.listing_id}')">
                            <i class="fas fa-eye me-2"></i>Quick View
                        </div>
                    </div>
                    <div class="listing-content">
                        <div class="listing-category">
                            <span class="category-tag">${listing.category || 'Other'}</span>
                            <span class="listing-date">${formatDate(listing.created_at)}</span>
                        </div>
                        <h3 class="listing-title">${escapeHtml(listing.title)}</h3>
                        <p class="listing-description">${escapeHtml(listing.description.substring(0, 100))}${listing.description.length > 100 ? '...' : ''}</p>
                        
                        <div class="seller-info">
                            <div class="seller-avatar">
                                <img src="${listing.seller_avatar || '/images/default-avatar.png'}" 
                                     alt="${listing.seller_username}" 
                                     onerror="this.src='/images/default-avatar.png'">
                            </div>
                            <div class="seller-details">
                                <span class="seller-name">${escapeHtml(listing.seller_username)}</span>
                                <div class="seller-rating">
                                    ${generateStars(listing.rating || 0)}
                                    <span class="rating-count">(${listing.review_count || 0})</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="listing-footer">
                            <div class="listing-stats">
                                <span class="stat-item">
                                    <i class="fas fa-eye"></i> ${listing.view_count || 0}
                                </span>
                                <span class="stat-item">
                                    <i class="fas fa-heart"></i> ${listing.favorite_count || 0}
                                </span>
                            </div>
                            <div class="listing-actions">
                                <button class="btn btn-outline-primary" onclick="contactSeller('${listing.seller_id}', '${listing.listing_id}')">
                                    <i class="fas fa-envelope me-1"></i>Message
                                </button>
                                ${listing.status === 'active' ? `
                                    <button class="btn btn-premium" onclick="quickView('${listing.listing_id}')">
                                        <i class="fas fa-shopping-cart me-1"></i>View Details
                                    </button>
                                ` : ''}
                            </div>
                        </div>
                    </div>
                </div>
            `;

                    // Add animation
                    setTimeout(() => {
                        card.classList.add('animate-in');
                    }, 100);

                    return card;
                }

                // ============================================
                // FILTER FUNCTIONS
                // ============================================
                function openFilterSidebar() {
                    document.getElementById('filterSidebar').classList.add('active');
                    document.getElementById('modalOverlay').classList.add('active');
                    document.body.style.overflow = 'hidden';
                }

                function closeFilterSidebar() {
                    document.getElementById('filterSidebar').classList.remove('active');
                    document.getElementById('modalOverlay').classList.remove('active');
                    document.body.style.overflow = '';
                }

                function applyFilters() {
                    const filters = {
                        min_price: document.getElementById('minPrice').value || null,
                        max_price: document.getElementById('maxPrice').value || null,
                        condition: Array.from(document.querySelectorAll('.condition-filters input:checked'))
                            .map(input => input.value).join(','),
                        campus: document.getElementById('campusFilter').value || null,
                        sortBy: document.getElementById('sortFilter').value || 'created_at',
                        sortOrder: document.getElementById('sortFilter').value === 'price_desc' ? 'DESC' : 'ASC'
                    };

                    // Remove null/empty values
                    Object.keys(filters).forEach(key => {
                        if (!filters[key]) delete filters[key];
                    });

                    currentFilters = filters;
                    loadMarketplace(currentCategory);
                    closeFilterSidebar();
                }

                function clearFilters() {
                    document.getElementById('minPrice').value = '';
                    document.getElementById('maxPrice').value = '';
                    document.getElementById('priceSlider').value = 500;
                    document.querySelectorAll('.condition-filters input').forEach(input => {
                        input.checked = input.value === 'good';
                    });
                    document.getElementById('campusFilter').value = '';
                    document.getElementById('sortFilter').value = 'created_at';

                    currentFilters = {};
                    showToast('Filters cleared', 'info');
                }

                function initPriceSlider() {
                    const priceSlider = document.getElementById('priceSlider');
                    const maxPriceInput = document.getElementById('maxPrice');

                    if (priceSlider && maxPriceInput) {
                        priceSlider.addEventListener('input', function () {
                            maxPriceInput.value = this.value;
                        });

                        maxPriceInput.addEventListener('input', function () {
                            const value = parseInt(this.value) || 500;
                            priceSlider.value = Math.min(Math.max(value, 0), 1000);
                        });
                    }
                }

                // ============================================
                // SEARCH FUNCTIONALITY
                // ============================================
                async function searchListings() {
                    const searchTerm = document.getElementById('marketplaceSearch').value.trim();

                    if (searchTerm.length === 0) {
                        // Reset to original listings
                        loadMarketplace(currentCategory);
                        return;
                    }

                    if (searchTerm.length < 2) return;

                    try {
                        showLoading(true);

                        const response = await fetch(`/api/marketplace/listings?search=${encodeURIComponent(searchTerm)}&limit=50`);
                        const data = await response.json();

                        const content = document.getElementById('marketplaceContent');
                        content.innerHTML = '';

                        if (data.listings.length === 0) {
                            content.innerHTML = `
                        <div class="premium-empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <h3>No Results Found</h3>
                            <p>No listings match your search for "${searchTerm}"</p>
                        </div>
                    `;
                        } else {
                            data.listings.forEach(listing => {
                                content.appendChild(createListingCard(listing));
                            });
                        }

                        showLoading(false);
                        document.getElementById('loadMoreContainer').style.display = 'none';

                    } catch (error) {
                        console.error('Error searching listings:', error);
                        showToast('Error searching listings', 'error');
                        showLoading(false);
                    }
                }

                // ============================================
                // LISTING ACTIONS
                // ============================================
                async function toggleFavorite(listingId, button) {
                    try {
                        const response = await fetch('/api/marketplace/favorites/toggle', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ listingId })
                        });

                        const data = await response.json();

                        if (data.success) {
                            // Update button state
                            if (button) {
                                button.classList.toggle('active');
                            }

                            // Update favorites count
                            fetchCounts();

                            showToast(data.favorited ? 'Added to favorites' : 'Removed from favorites', 'success');
                        }
                    } catch (error) {
                        console.error('Error toggling favorite:', error);
                        showToast('Error updating favorite', 'error');
                    }
                }

                async function quickView(listingId) {
                    try {
                        const response = await fetch(`/api/marketplace/listings/${listingId}`);
                        const data = await response.json();

                        if (data.success) {
                            const listing = data.listing;

                            // Update modal content
                            document.getElementById('quickViewImage').src = listing.image_urls?.[0] || '/images/default-listing.jpg';
                            document.getElementById('quickViewTitle').textContent = listing.title;
                            document.getElementById('quickViewCategory').textContent = listing.category || 'Other';
                            document.getElementById('quickViewDate').textContent = formatDate(listing.created_at);
                            document.getElementById('quickViewDescription').textContent = listing.description;
                            document.getElementById('quickViewSellerAvatar').src = listing.seller_avatar || '/images/default-avatar.png';
                            document.getElementById('quickViewSellerName').textContent = listing.seller_username;
                            document.getElementById('quickViewViews').textContent = listing.view_count || 0;
                            document.getElementById('quickViewLikes').textContent = listing.favorite_count || 0;

                            // Update rating
                            const ratingElement = document.getElementById('quickViewRating');
                            ratingElement.innerHTML = generateStars(listing.rating || 0) +
                                `<span class="rating-count">(${listing.review_count || 0})</span>`;

                            // Update buy button
                            const buyBtn = document.getElementById('quickViewBuyBtn');
                            if (listing.status === 'active') {
                                buyBtn.textContent = 'Buy Now - $' + parseFloat(listing.price).toFixed(2);
                                buyBtn.onclick = () => contactSeller(listing.seller_id, listing.listing_id);
                                buyBtn.disabled = false;
                            } else {
                                buyBtn.textContent = listing.status === 'sold' ? 'Sold Out' : 'Unavailable';
                                buyBtn.disabled = true;
                            }

                            // Store current listing for chat
                            window.currentListing = listing;

                            // Show modal
                            document.getElementById('quickViewModal').classList.add('active');
                            document.getElementById('modalOverlay').classList.add('active');
                            document.body.style.overflow = 'hidden';
                        }
                    } catch (error) {
                        console.error('Error fetching listing details:', error);
                        showToast('Error loading listing details', 'error');
                    }
                }

                function closeQuickView() {
                    document.getElementById('quickViewModal').classList.remove('active');
                    document.getElementById('modalOverlay').classList.remove('active');
                    document.body.style.overflow = '';
                    window.currentListing = null;
                }

                // ============================================
                // CHAT FUNCTIONALITY
                // ============================================
                async function contactSeller(sellerId, listingId = null) {
                    if (!currentUserId) {
                        showToast('Please login to message sellers', 'warning');
                        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                        return;
                    }

                    try {
                        const response = await fetch('/api/marketplace/contact-seller', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                sellerId,
                                listingId,
                                message: `Hi! I'm interested in your listing. Is it still available?`
                            })
                        });

                        const data = await response.json();

                        if (data.success) {
                            // Open chat modal
                            openChatModal(data.chatId, sellerId);

                            // Join chat room via WebSocket
                            if (marketplaceSocket) {
                                marketplaceSocket.joinMarketplaceChat(data.chatId);
                            }

                            showToast('Chat started with seller', 'success');
                        }
                    } catch (error) {
                        console.error('Error contacting seller:', error);
                        showToast('Error starting chat', 'error');
                    }
                }

                function openChatModal(chatId, userId) {
                    currentChat = chatId;

                    // Clear messages
                    document.getElementById('chatMessages').innerHTML = '';
                    document.getElementById('chatInput').value = '';
                    document.getElementById('typingIndicator').classList.remove('active');

                    // Load chat messages
                    loadChatMessages(chatId);

                    // Show modal
                    document.getElementById('chatModal').classList.add('active');
                    document.getElementById('modalOverlay').classList.add('active');
                    document.body.style.overflow = 'hidden';
                }

                function closeChatModal() {
                    currentChat = null;
                    document.getElementById('chatModal').classList.remove('active');
                    document.getElementById('modalOverlay').classList.remove('active');
                    document.body.style.overflow = '';
                }

                async function loadChatMessages(chatId) {
                    try {
                        const response = await fetch(`/api/marketplace/chats/${chatId}/messages`);
                        const data = await response.json();

                        if (data.success) {
                            const messagesContainer = document.getElementById('chatMessages');
                            messagesContainer.innerHTML = '';

                            data.messages.forEach(message => {
                                appendMessageToChat(message);
                            });

                            // Scroll to bottom
                            messagesContainer.scrollTop = messagesContainer.scrollHeight;
                        }
                    } catch (error) {
                        console.error('Error loading chat messages:', error);
                    }
                }

                async function sendChatMessage() {
                    if (!currentChat) return;

                    const input = document.getElementById('chatInput');
                    const content = input.value.trim();

                    if (!content) return;

                    try {
                        const response = await fetch(`/api/marketplace/chats/${currentChat}/messages`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ content })
                        });

                        const data = await response.json();

                        if (data.success) {
                            // Clear input
                            input.value = '';

                            // Add message to UI
                            const message = {
                                content: content,
                                sender_id: currentUserId,
                                sent_at: new Date().toISOString(),
                                message_id: data.messageId
                            };

                            appendMessageToChat(message);

                            // Send via WebSocket
                            if (marketplaceSocket) {
                                marketplaceSocket.sendMarketplaceMessage(currentChat, content, currentUserId);
                            }
                        }
                    } catch (error) {
                        console.error('Error sending message:', error);
                        showToast('Error sending message', 'error');
                    }
                }

                function appendMessageToChat(message) {
                    const messagesContainer = document.getElementById('chatMessages');
                    const isSent = message.sender_id === currentUserId;

                    const messageEl = document.createElement('div');
                    messageEl.className = `message ${isSent ? 'sent' : 'received'}`;
                    messageEl.innerHTML = `
                <div class="message-content">${escapeHtml(message.content)}</div>
                <div class="message-time">${formatTime(message.sent_at)}</div>
            `;

                    messagesContainer.appendChild(messageEl);
                    messagesContainer.scrollTop = messagesContainer.scrollHeight;
                }

                // ============================================
                // WEBSOCKET EVENT HANDLERS
                // ============================================
                function handleNewMessage(data) {
                    if (currentChat === data.chatId) {
                        appendMessageToChat({
                            content: data.message,
                            sender_id: data.senderId,
                            sent_at: data.timestamp
                        });
                    } else {
                        // Show notification for new message
                        showNotification('New Message', data.message, 'info');
                        updateUnreadMessagesCount();
                    }
                }

                function handleNewListing(data) {
                    console.log('New listing:', data);

                    // Only add if in current category or all
                    if (currentCategory === 'all' || currentCategory === data.category) {
                        const content = document.getElementById('marketplaceContent');

                        // Check if listing already exists
                        const existing = content.querySelector(`[data-listing-id="${data.listingId}"]`);
                        if (!existing) {
                            // Create and prepend new listing
                            const listing = {
                                listing_id: data.listingId,
                                title: data.title,
                                price: data.price,
                                category: data.category,
                                seller_username: data.sellerName,
                                seller_avatar: data.sellerAvatar,
                                image_url: data.imageUrl,
                                created_at: data.timestamp,
                                status: 'active',
                                view_count: 0,
                                favorite_count: 0
                            };

                            content.prepend(createListingCard(listing));
                            showToast(`New listing: ${data.title}`, 'info');
                        }
                    }
                }

                function handleListingSold(data) {
                    const listingCard = document.querySelector(`[data-listing-id="${data.listingId}"]`);
                    if (listingCard) {
                        // Update status badge
                        const soldBadge = listingCard.querySelector('.sold-badge');
                        if (!soldBadge) {
                            const badge = document.createElement('div');
                            badge.className = 'sold-badge';
                            badge.innerHTML = '<i class="fas fa-tag me-1"></i>SOLD';
                            listingCard.querySelector('.listing-image').appendChild(badge);
                        }

                        // Disable buy button
                        const buyBtn = listingCard.querySelector('.listing-actions .btn-premium');
                        if (buyBtn) {
                            buyBtn.textContent = 'Sold Out';
                            buyBtn.disabled = true;
                        }

                        // Update quick view modal if open
                        if (window.currentListing && window.currentListing.listing_id === data.listingId) {
                            const quickViewBuyBtn = document.getElementById('quickViewBuyBtn');
                            if (quickViewBuyBtn) {
                                quickViewBuyBtn.textContent = 'Sold Out';
                                quickViewBuyBtn.disabled = true;
                            }
                        }
                    }
                }

                function handleListingStatusChange(data) {
                    const listingCard = document.querySelector(`[data-listing-id="${data.listingId}"]`);
                    if (listingCard) {
                        // Update status based on data.status
                        console.log('Listing status changed:', data);
                    }
                }

                function handleTypingIndicator(data) {
                    if (currentChat === data.chatId) {
                        const typingIndicator = document.getElementById('typingIndicator');
                        if (data.isTyping) {
                            typingIndicator.textContent = 'Seller is typing...';
                            typingIndicator.classList.add('active');
                        } else {
                            typingIndicator.textContent = '';
                            typingIndicator.classList.remove('active');
                        }
                    }
                }

                function handleNotification(data) {
                    showNotification(data.title || 'Notification', data.message, data.type || 'info');
                    updateNotificationCount();
                }

                function handleChatMessage(data) {
                    handleNewMessage(data);
                }

                function handleNewListingAvailable(data) {
                    handleNewListing(data);
                }

                function handleMessageDelivered(data) {
                    console.log('Message delivered:', data);
                }

                function handleMessageError(data) {
                    showToast('Message failed to send: ' + data.error, 'error');
                }

                function handleChatJoined(data) {
                    console.log('Joined chat:', data);
                }

                function handleConnected(data) {
                    console.log('WebSocket connection confirmed:', data);
                }

                // ============================================
                // UI UTILITY FUNCTIONS
                // ============================================
                function showLoading(show) {
                    document.getElementById('loadingSpinner').style.display = show ? 'block' : 'none';
                }

                function showEmptyState() {
                    const content = document.getElementById('marketplaceContent');
                    content.innerHTML = `
                <div class="premium-empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-store-slash"></i>
                    </div>
                    <h3>No Listings Found</h3>
                    <p>Be the first to list an item in this category!</p>
                    <button class="btn btn-premium px-5 py-3" onclick="createListing()">
                        <i class="fas fa-plus me-2"></i>Create Your First Listing
                    </button>
                </div>
            `;
                }

                function showToast(message, type = 'info') {
                    // Create toast element
                    const toast = document.createElement('div');
                    toast.className = `premium-toast toast-${type}`;
                    toast.innerHTML = `
                <div class="toast-content">
                    <i class="fas fa-${getToastIcon(type)}"></i>
                    <span>${escapeHtml(message)}</span>
                </div>
                <button class="toast-close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            `;

                    document.body.appendChild(toast);

                    // Show toast
                    setTimeout(() => {
                        toast.classList.add('show');
                    }, 10);

                    // Remove toast after 5 seconds
                    setTimeout(() => {
                        toast.remove();
                    }, 5000);
                }

                function showNotification(title, message, type = 'info') {
                    // Use browser notifications if available and permitted
                    if ('Notification' in window && Notification.permission === 'granted') {
                        new Notification(title, {
                            body: message,
                            icon: '/images/notification-icon.png'
                        });
                    }

                    // Also show toast
                    showToast(`${title}: ${message}`, type);
                }

                function updateSocketStatus(connected) {
                    const statusEl = document.getElementById('socketStatus');
                    if (statusEl) {
                        statusEl.textContent = connected ? ' Connected' : ' Disconnected';
                        statusEl.className = connected ? 'socket-status connected' : 'socket-status disconnected';
                    }
                }

                function updateUnreadMessagesCount() {
                    const badge = document.getElementById('unreadMessagesCount');
                    if (badge) {
                        const current = parseInt(badge.textContent) || 0;
                        badge.textContent = current + 1;
                    }
                }

                function updateNotificationCount() {
                    const badge = document.getElementById('notificationCount');
                    if (badge) {
                        const current = parseInt(badge.textContent) || 0;
                        badge.textContent = current + 1;
                    }
                }

                function toggleNotifications() {
                    const dropdown = document.getElementById('notificationsDropdown');
                    dropdown.classList.toggle('active');

                    if (dropdown.classList.contains('active')) {
                        document.getElementById('modalOverlay').classList.add('active');
                        loadNotifications();
                    } else {
                        document.getElementById('modalOverlay').classList.remove('active');
                    }
                }

                async function markAllAsRead() {
                    try {
                        const response = await fetch('/api/marketplace/notifications/mark-all-read', { method: 'POST' });
                        const data = await response.json();
                        if (data.success) {
                            document.getElementById('notificationCount').textContent = '0';
                            document.querySelectorAll('.notification-item.unread').forEach(item => {
                                item.classList.remove('unread');
                            });
                            showToast('All notifications marked as read', 'success');
                        }
                    } catch (error) {
                        console.error('Error marking notifications as read:', error);
                    }
                }

                async function loadNotifications() {
                    try {
                        const response = await fetch('/api/notifications');
                        const data = await response.json();

                        const list = document.getElementById('notificationsList');
                        list.innerHTML = '';

                        if (data.notifications && data.notifications.length > 0) {
                            data.notifications.forEach(notification => {
                                const item = document.createElement('div');
                                item.className = `notification-item ${notification.is_read ? '' : 'unread'}`;
                                item.innerHTML = `
                            <div class="notification-icon">
                                <i class="fas fa-${getNotificationIcon(notification.type)}"></i>
                            </div>
                            <div class="notification-content">
                                <p class="notification-text">${escapeHtml(notification.content)}</p>
                                <small class="notification-time">${formatTime(notification.created_at)}</small>
                            </div>
                        `;
                                list.appendChild(item);
                            });
                        } else {
                            list.innerHTML = `
                        <div class="text-center py-4">
                            <i class="fas fa-bell-slash fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No notifications</p>
                        </div>
                    `;
                        }
                    } catch (error) {
                        console.error('Error loading notifications:', error);
                    }
                }

                function markAllAsRead() {
                    // Implement mark all as read functionality
                    showToast('All notifications marked as read', 'success');
                    document.getElementById('notificationCount').textContent = '0';
                }

                // ============================================
                // NAVIGATION FUNCTIONS
