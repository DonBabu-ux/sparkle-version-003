        @media (max-width: 1200px) {
            .listings-grid {
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            }

            .filter-sidebar {
                width: 350px;
            }
        }

        @media (max-width: 992px) {
            .marketplace-nav-content {
                flex-wrap: wrap;
                gap: 15px;
            }

            .nav-brand {
                font-size: 20px;
