                            <i class="fas fa-th-large me-2"></i>All
                        </button>
                        <button class="premium-tab-btn" data-category="electronics">
                            <i class="fas fa-laptop me-2"></i>Electronics
                        </button>
                        <button class="premium-tab-btn" data-category="books">
                            <i class="fas fa-book me-2"></i>Books
                        </button>
                        <button class="premium-tab-btn" data-category="clothing">
                            <i class="fas fa-tshirt me-2"></i>Clothing
                        </button>
                        <button class="premium-tab-btn" data-category="furniture">
                            <i class="fas fa-couch me-2"></i>Furniture
                        </button>
                        <button class="premium-tab-btn" data-category="services">
                            <i class="fas fa-concierge-bell me-2"></i>Services
                        </button>
                        <button class="premium-tab-btn" data-category="student_market">
                            <i class="fas fa-graduation-cap me-2"></i>Student Market
                        </button>
                        <button class="premium-tab-btn" data-category="secondhand">
                            <i class="fas fa-recycle me-2"></i>Second-Hand
                        </button>
