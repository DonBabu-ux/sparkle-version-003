            height: 18px;
            margin: 0;
            border: 2px solid #ffd6e0;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: #E1306C;
            border-color: #E1306C;
        }

        .form-check-input:focus {
            border-color: #E1306C;
            box-shadow: 0 0 0 0.2rem rgba(225, 48, 108, 0.25);
        }

        .form-check-label {
            font-size: 14px;
            color: #333;
            cursor: pointer;
        }

        .form-select {
            border: 1px solid #ffd6e0;
            border-radius: var(--border-radius);
            padding: 10px 15px;
            font-size: 14px;
            color: #333;
            background-color: white;
            margin-top: 5px;
            cursor: pointer;
        }

        .form-select:focus {
            border-color: #E1306C;
            box-shadow: 0 0 0 0.2rem rgba(225, 48, 108, 0.25);
        }

        .filter-actions {
            padding: 20px;
            background: #fff0f5;
            position: sticky;
            bottom: 0;
            border-top: 1px solid #ffd6e0;
        }

        .filter-actions .btn {
            border-radius: var(--border-radius);
            padding: 12px;
            font-weight: 600;
            font-size: 14px;
            transition: var(--transition);
        }

        .filter-actions .btn-outline-secondary {
            border: 2px solid #ffd6e0;
            color: #E1306C;
            background: white;
        }

        .filter-actions .btn-outline-secondary:hover {
            background: #fff0f5;
            border-color: #E1306C;
        }

        .filter-actions .btn-premium {
            background: var(--gradient-primary);
            border: none;
            color: white;
        }

        .filter-actions .btn-premium:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        /* ===== NOTIFICATIONS DROPDOWN STYLES ===== */
        .notifications-dropdown {
            position: fixed;
            top: 80px;
            right: 20px;
            width: 350px;
            max-height: 500px;
            background: white;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-lg);
            z-index: 1099;
            display: none;
            flex-direction: column;
            border: 1px solid #ffd6e0;
            overflow: hidden;
        }

        .notifications-dropdown.active {
            display: flex;
        }

        .notifications-header {
            background: var(--gradient-primary);
            color: white;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .notifications-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .notifications-header .btn-link {
            color: white;
            text-decoration: none;
            font-size: 13px;
            opacity: 0.9;
            transition: var(--transition);
        }

        .notifications-header .btn-link:hover {
            opacity: 1;
            text-decoration: underline;
        }

        .notifications-list {
            flex: 1;
            overflow-y: auto;
            max-height: 400px;
            padding: 10px 0;
        }

        .notification-item {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            padding: 12px 20px;
            border-bottom: 1px solid #ffd6e0;
            cursor: pointer;
            transition: var(--transition);
        }

        .notification-item:hover {
            background: #fff0f5;
        }

        .notification-item.unread {
            background: rgba(225, 48, 108, 0.05);
        }

        .notification-icon {
            width: 36px;
            height: 36px;
            background: #fff0f5;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #E1306C;
            font-size: 14px;
            flex-shrink: 0;
        }

        .notification-content {
            flex: 1;
            min-width: 0;
        }

        .notification-text {
            margin: 0;
            font-size: 13px;
            color: #333;
            line-height: 1.4;
        }

        .notification-time {
            display: block;
            font-size: 11px;
            color: #E1306C;
            margin-top: 4px;
        }

        .notifications-footer {
            padding: 15px 20px;
            border-top: 1px solid #ffd6e0;
            background: #fff0f5;
        }

        .notifications-footer .btn {
            border-radius: var(--border-radius);
            padding: 10px;
            font-size: 13px;
            font-weight: 600;
        }

        /* ===== OVERLAY FOR MODALS ===== */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1050;
            display: none;
            backdrop-filter: blur(3px);
        }

        .modal-overlay.active {
            display: block;
        }

