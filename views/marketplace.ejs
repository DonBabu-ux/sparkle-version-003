                                <span class="notification-badge" id="favoritesCount">0</span>
                            </button>

                            <!-- Messages -->
                            <button class="nav-action-btn" id="messagesBtn" data-bs-toggle="tooltip" title="Messages">
                                <i class="fas fa-comment"></i>
                                <span class="notification-badge" id="unreadMessagesCount">0</span>
                            </button>

                            <!-- Notifications -->
                            <button class="nav-action-btn" id="notificationBtn" data-bs-toggle="tooltip"
