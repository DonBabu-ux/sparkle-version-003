<%- include('../partials/head', { title: listing.title }) %>

<body>
    <%- include('../partials/sidebar') %>
    
    <div class="container">
        <div class="header glass">
            <a href="/marketplace" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Marketplace
            </a>
        </div>
        
        <div class="listing-detail">
            <!-- Product Images Carousel -->
            <div class="listing-images">
                <% if (listing.media && listing.media.length > 0) { %>
                    <div id="listingCarousel" class="carousel slide">
                        <div class="carousel-inner">
                            <% listing.media.forEach((media, index) => { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <% if (media.media_type === 'image') { %>
                                        <img src="<%= media.media_url %>" class="d-block w-100" alt="<%= listing.title %>">
                                    <% } else { %>
                                        <video controls class="d-block w-100">
                                            <source src="<%= media.media_url %>" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    <% } %>
                                </div>
                            <% }); %>
                        </div>
                        <% if (listing.media.length > 1) { %>
                            <button class="carousel-control-prev" type="button" data-bs-target="#listingCarousel">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#listingCarousel">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        <% } %>
                    </div>
                <% } else { %>
                    <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=800" 
                         class="img-fluid" alt="<%= listing.title %>">
                <% } %>
            </div>
            
            <!-- Product Details -->
            <div class="listing-info">
                <h1><%= listing.title %></h1>
                <div class="price-tag">$<%= listing.price %></div>
                
                <div class="seller-info">
                    <img src="<%= listing.seller_avatar || '/uploads/avatars/default.png' %>" 
                         alt="<%= listing.seller_username %>" class="seller-avatar">
                    <div>
                        <h5><%= listing.seller_username %></h5>
                        <p>Seller</p>
                    </div>
                </div>
                
                <div class="listing-meta">
                    <span><i class="fas fa-eye"></i> <%= listing.view_count || 0 %> views</span>
                    <span><i class="fas fa-calendar"></i> <%= new Date(listing.created_at).toLocaleDateString() %></span>
                    <span><i class="fas fa-map-marker-alt"></i> <%= listing.campus %></span>
                </div>
                
                <div class="description">
                    <h3>Description</h3>
                    <p><%= listing.description %></p>
                </div>
                
                <div class="listing-actions">
                    <button class="btn btn-primary btn-lg" onclick="contactSeller('<%= listing.seller_id %>', '<%= listing.listing_id %>')">
                        <i class="fas fa-envelope"></i> Contact Seller
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function contactSeller(sellerId, listingId) {
            try {
                const response = await fetch('/api/marketplace/contact-seller', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ sellerId, listingId })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    window.location.href = data.redirect || `/messages?chat=${data.chatId}`;
                } else {
                    alert(data.message || 'Failed to contact seller');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        }
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
