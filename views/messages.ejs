                                    <button class="new-message-btn" onclick="openNewMessageModal()" title="New Message">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                    <button class="new-message-btn" onclick="openGroupModal()" title="New Group"
                                        style="margin-left: 8px;">
                                        <i class="fas fa-users"></i>
                                    </button>
                                </div>

                                <div class="search-wrapper">
                                    <i class="fas fa-search search-icon"
                                        style="margin-right: 12px; color: var(--text-muted);"></i>
                                    <input type="text" class="search-input" placeholder="Search conversations..."
                                        id="searchInput" oninput="filterConversations()">
                                </div>
                            </div>

                            <div class="tabs-container">
                                <button class="tab-btn active" onclick="switchTab('primary')"
                                    id="tabPrimary">Primary</button>
                                <button class="tab-btn" onclick="switchTab('requests')"
                                    id="tabRequests">Requests</button>
                            </div>

                            <div class="conversations-list" id="conversationsList">
                                <div style="padding: 40px; text-align: center;">
                                    <i class="fas fa-circle-notch fa-spin"
                                        style="font-size: 24px; color: var(--sparkle-primary);"></i>
                                </div>
                            </div>
                        </div>

                        <!-- CHAT AREA -->
                        <div class="chat-area" id="chatArea">
                            <!-- Empty State -->
                            <div class="empty-state slide-up" id="emptyState">
                                <div class="empty-state-icon-container">
                                    <i class="fas fa-paper-plane"></i>
                                </div>
                                <h2>Spark Connections</h2>
                                <p>Start a professional conversation with your campus connections today.</p>
                                <button class="empty-state-btn" onclick="openNewMessageModal()">
                                    <i class="fas fa-plus" style="margin-right: 8px;"></i>
                                    New Message
                                </button>
                            </div>

                            <!-- Active Chat -->
                            <div class="hidden" id="activeChat"
                                style="height: 100%; display: flex; flex-direction: column;">
                                <div class="chat-header">
                                    <div class="chat-user-info">
                                        <button class="back-btn" onclick="closeChat()">
                                            <i class="fas fa-chevron-left"></i>
                                        </button>
                                        <img src="/uploads/avatars/default.png" alt="User" class="chat-avatar"
                                            id="chatAvatar">
                                        <div class="chat-user-details">
                                            <h3 id="chatUserName">User Name</h3>
                                            <div class="chat-user-status" id="chatUserStatus">Online</div>
                                        </div>
                                    </div>
                                    <div class="chat-actions">
                                        <button class="chat-action-btn" title="Voice Call">
                                            <i class="fas fa-phone"></i>
                                        </button>
                                        <button class="chat-action-btn" title="Video Call">
                                            <i class="fas fa-video"></i>
                                        </button>
                                        <button class="chat-action-btn" title="Details">
                                            <i class="fas fa-circle-info"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="messages-container" id="messagesContainer">
                                    <!-- Messages will be inserted here -->
                                </div>

                                <div class="input-area">
                                    <div class="input-container">
                                        <button class="input-icon-btn">
                                            <i class="far fa-face-smile"></i>
                                        </button>
                                        <button class="input-icon-btn">
                                            <i class="far fa-image"></i>
                                        </button>
                                        <textarea class="message-input" id="messageInput"
                                            placeholder="Write a message..." rows="1"
                                            oninput="autoResize(this)"></textarea>
                                        <button class="send-btn" id="sendBtn" onclick="sendMessage()">
                                            <i class="fas fa-paper-plane"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
        </div>

        <!-- NEW MESSAGE MODAL -->
        <div class="modal-overlay" id="newMessageModal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">New Message</h2>
                    <button class="modal-close" onclick="closeNewMessageModal()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-search">
                    <input type="text" placeholder="Search following users..." oninput="searchUsers(this.value)"
                        autofocus>
                </div>
                <div class="modal-users-list" id="modalUsersList">
                    <div style="padding: 40px; text-align: center; color: var(--text-muted);">
                        <i class="fas fa-circle-notch fa-spin"
                            style="font-size: 24px; color: var(--sparkle-primary); margin-bottom: 15px;"></i>
                        <p>Finding your connections...</p>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/apiClient.js"></script>
        <script src="/js/dashboardAPI.js"></script>
        <script>
            // Compatibility alias if needed or just use DashboardAPI directly
            if (window.DashboardAPI && !window.dashboardAPI) {
                window.dashboardAPI = window.DashboardAPI;
            }

            const currentUserId = '<%= user.user_id %>';
            let conversations = [];
            let currentFilter = 'primary';
            let currentChatId = null; // Replaces currentPartnerId
            let isCurrentChatGroup = false;
            let followedUsers = [];
            let activeSubscriptions = new Map();

            document.addEventListener('DOMContentLoaded', () => {
                // Ensure API is available
                const API = window.DashboardAPI || window.dashboardAPI;
                if (!API) {
                    console.error('Critical: DashboardAPI not loaded.');
                    return;
                }

                // Wait for Firebase
                const checkFirebase = setInterval(() => {
                    if (window.sparkleRealtime) {
                        clearInterval(checkFirebase);
                        console.log('âœ… Firebase initialized in messages.ejs');
                        loadConversations();
                    }
                }, 100);

                // Enter key to send
                document.getElementById('messageInput').addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });

                // Typing indicator
                const input = document.getElementById('messageInput');
                input.addEventListener('input', () => {
                    if (currentChatId && window.sparkleRealtime) {
                        window.sparkleRealtime.startTyping(currentChatId);
                    }
                });
            });

            async function openChat(id, name, avatar, isGroup) {
                // Cleanup old subscriptions
                activeSubscriptions.forEach(unsub => {
                    if (window.sparkleRealtime) window.sparkleRealtime.unsubscribe(unsub);
                });
                activeSubscriptions.clear();

                currentChatId = id;
                isCurrentChatGroup = isGroup;

                // Update UI State
                document.getElementById('emptyState').classList.add('hidden');
                document.getElementById('activeChat').classList.remove('hidden');
                document.getElementById('chatArea').classList.add('active'); // For mobile
                document.querySelectorAll('.conversation-item').forEach(el => el.classList.remove('active'));

                const activeItem = document.querySelector(`.conversation-item[data-chat-id="${id}"]`);
                if (activeItem) activeItem.classList.add('active');

                document.getElementById('chatUserName').textContent = name;
                document.getElementById('chatAvatar').src = avatar || '/uploads/avatars/default.png';
                document.getElementById('chatUserStatus').textContent = isGroup ? 'Group Chat' : 'Online';

                // Load Initial Messages (History)
                const container = document.getElementById('messagesContainer');
                container.innerHTML = `<div style="padding: 50px; text-align: center;"><i class="fas fa-circle-notch fa-spin"></i></div>`;

                try {
                    // Fetch history from API
                    const history = await dashboardAPI.loadChatHistory(id);
                    renderMessages(history);

                    // Start Firebase Watcher for REAL-TIME updates
                    if (window.sparkleRealtime) {
                        const msgSubId = window.sparkleRealtime.watchMessages(id, (messages) => {
                            // Merge or re-render
                            renderMessages(messages);
                        });
                        activeSubscriptions.set('messages', msgSubId);

                        const typingSubId = window.sparkleRealtime.watchTyping(id, (users) => {
                            const statusEl = document.getElementById('chatUserStatus');
                            const typingUser = users.find(u => u.userId !== currentUserId);
                            if (typingUser) {
                                statusEl.textContent = 'typing...';
                                statusEl.style.color = 'var(--sparkle-primary)';
                            } else {
                                statusEl.textContent = isGroup ? 'Group Chat' : 'Online';
                                statusEl.style.color = 'var(--text-muted)';
                            }
                        });
                        activeSubscriptions.set('typing', typingSubId);
                    }
                } catch (e) {
                    console.error('Failed to setup chat:', e);
                    container.innerHTML = `<p style="text-align: center; color: red;">Failed to load chat history.</p>`;
                }
            }

            function closeChat() {
                document.getElementById('chatArea').classList.remove('active');
                currentChatId = null;
            }

            async function loadConversations() {
                const list = document.getElementById('conversationsList');
                try {
                    const response = await dashboardAPI.loadChats();
                    // Handle both direct array and { status, data } formats
                    conversations = response.data || response || [];
                    renderConversations(conversations);
                } catch (err) {
                    console.error('Failed to load chats:', err);
                    list.innerHTML = '<div style="padding: 20px; text-align: center; color: var(--text-muted);">Failed to load conversations.</div>';
                }
            }

            function renderConversations(data) {
                const list = document.getElementById('conversationsList');
                // Ensure data is an array
                const conversList = Array.isArray(data) ? data : [];

                const filtered = conversList.filter(c => {
                    const isRequest = c.is_request === 1 || c.is_request === true;
                    if (currentFilter === 'requests') return isRequest;
                    return !isRequest;
                });

                if (filtered.length === 0) {
                    list.innerHTML = `
                        <div style="padding: 60px 40px; text-align: center; color: var(--text-muted);">
                            <i class="far fa-comments" style="font-size: 40px; margin-bottom: 15px; opacity: 0.3;"></i>
                            <p>${currentFilter === 'requests' ? 'No message requests' : 'Your conversations will appear here'}</p>
                        </div>
                    `;
                    return;
                }

                list.innerHTML = filtered.map(c => {
                    const avatar = c.avatar_url || '/uploads/avatars/default.png';
                    const time = c.last_message_time ? formatTime(c.last_message_time) : '';
                    const isGroup = c.is_group === 1 || c.is_group === true;
                    return `
                        <div class="conversation-item ${currentChatId === c.id ? 'active' : ''}" 
                             data-chat-id="${c.id}"
                             onclick="openChat('${c.id}', '${escapeHtml(c.name)}', '${avatar}', ${isGroup})">
                            <div class="convo-avatar-container">
                                <img src="${avatar}" class="convo-avatar">
                                ${c.is_online ? '<div class="convo-status online"></div>' : ''}
                            </div>
                            <div class="convo-info">
                                <div class="convo-name-row">
                                    <h4 class="convo-name">${escapeHtml(c.name)}</h4>
                                    <span class="convo-time">${time}</span>
                                </div>
                                <div class="convo-msg-row">
                                    <p class="convo-last-msg">${escapeHtml(c.last_message || 'No messages yet')}</p>
                                    ${c.unread_count > 0 ? `<span class="unread-badge">${c.unread_count}</span>` : ''}
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');
            }

            function switchTab(tab) {
                currentFilter = tab;
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                document.getElementById(tab === 'primary' ? 'tabPrimary' : 'tabRequests').classList.add('active');
                renderConversations(conversations);
            }

            function filterConversations() {
                const query = document.getElementById('searchInput').value.toLowerCase();
                const filtered = conversations.filter(c =>
                    c.name.toLowerCase().includes(query) ||
                    (c.last_message && c.last_message.toLowerCase().includes(query))
                );
                renderConversations(filtered);
            }

            function autoResize(textarea) {
                textarea.style.height = 'auto';
                textarea.style.height = (textarea.scrollHeight) + 'px';
            }

            function renderMessages(msgs) {
                const container = document.getElementById('messagesContainer');
                if (!msgs || msgs.length === 0) {
                    container.innerHTML = `<div style="padding: 50px; text-align: center; color: #aaa;">No messages yet. Say hi! ðŸ‘‹</div>`;
                    return;
                }

                // Check if we need to auto-scroll (user is at bottom)
                const isAtBottom = container.scrollHeight - container.scrollTop <= container.clientHeight + 100;

                container.innerHTML = msgs.map((m) => {
                    const isSent = m.senderId === currentUserId || m.sender_id === currentUserId;
                    const content = m.text || m.content || '';
                    const time = m.timestamp ? new Date(m.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) : '...';

                    return `
                        <div class="message-group ${isSent ? 'sent' : 'received'} fade-in" id="msg-${m.id}">
                             ${!isSent && isCurrentChatGroup ? `<small style="margin-left: 10px; color: #888;">${escapeHtml(m.senderName || m.sender_name || '')}</small>` : ''}
                            <div class="message-bubble ${isSent ? 'sent' : 'received'}">
                                ${escapeHtml(content)}
                            </div>
                             <div class="message-time">${time}</div>
                        </div>
                    `;
                }).join('');

                if (isAtBottom) container.scrollTop = container.scrollHeight;
            }

            async function sendMessage() {
                const input = document.getElementById('messageInput');
                const text = input.value.trim();
                if (!text || !currentChatId) return;

                input.value = '';
                autoResize(input);

                try {
                    if (window.sparkleRealtime) {
                        window.sparkleRealtime.sendMessage(currentChatId, text);
                        // No need to manually append, the watcher will trigger renderMessages

                        // Still hit the legacy API for background persistence if needed
                        apiClient.post(`/messages/${currentChatId}`, { content: text }).catch(e => {
                            console.warn('API sync failed, but Firebase sent:', e);
                        });
                    } else {
                        throw new Error('Real-time connection unavailable');
                    }
                } catch (e) {
                    console.error('Failed to send:', e);
                    alert('Failed to send message');
                }
            }

            // ... (Rest of utility functions like openNewMessageModal, etc. remain the same)

            function openNewMessageModal() {
                document.getElementById('newMessageModal').classList.add('active');
                const list = document.getElementById('modalUsersList');
                list.innerHTML = `
                     <div style="padding: 40px; text-align: center; color: var(--text-muted);">
                         <i class="fas fa-circle-notch fa-spin" style="font-size: 24px; color: var(--sparkle-primary); margin-bottom: 15px;"></i>
                         <p>Finding your connections...</p>
                    </div>
                `;

                try {
                    window.apiClient.get('/users/friends/search')
                        .then(res => {
                            followedUsers = Array.isArray(res) ? res : (res.data || []);
                            renderModalUsers(followedUsers);
                        });
                } catch (e) {
                    console.error('Failed to load users:', e);
                }
            }

            function renderModalUsers(users) {
                const list = document.getElementById('modalUsersList');
                if (!users || users.length === 0) {
                    list.innerHTML = `<p style="text-align:center; padding: 20px;">No connections found.</p>`;
                    return;
                }
                list.innerHTML = users.map(u => `
                     <div class="modal-user-item slide-up" onclick="startChat('${u.user_id}', '${escapeHtml(u.name || u.username)}', '${u.avatar_url}')">
                        <img src="${u.avatar_url || '/uploads/avatars/default.png'}" class="modal-user-avatar">
                        <div class="modal-user-info">
                            <h4>${escapeHtml(u.name || u.username)}</h4>
                            <p>@${escapeHtml(u.username)}</p>
                        </div>
                    </div>
                `).join('');
            }

            function startChat(userId, name, avatar) {
                document.getElementById('newMessageModal').classList.remove('active');
                openChat(userId, name, avatar, false);
            }

            function searchUsers(query) {
                // Reuse existing search logic or simple filter on followedUsers
                if (!query) return renderModalUsers(followedUsers);
                const filtered = followedUsers.filter(u =>
                    (u.name && u.name.toLowerCase().includes(query.toLowerCase())) ||
                    (u.username && u.username.toLowerCase().includes(query.toLowerCase()))
                );
                renderModalUsers(filtered);
            }

            function formatTime(dateInput) {
                // Reuse existing implementation
                if (!dateInput) return '';
                const date = new Date(dateInput);
                return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            }

            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }
        </script>
        </main>
        </div>
        <%- include('partials/bottom-nav') %>
            </body>

