        }

        .modal-close:hover {
            background: #f0f0f0;
        }

        .modal-search {
            padding: 20px 30px;
            border-bottom: 1px solid var(--border-light);
        }

        .modal-search input {
            width: 100%;
            border: none;
            outline: none;
            font-size: 16px;
            font-weight: 500;
        }

        .modal-users-list {
            padding: 10px 0;
            max-height: 400px;
            overflow-y: auto;
        }

        .modal-user-item {
            padding: 15px 30px;
            display: flex;
            align-items: center;
            gap: 15px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .modal-user-item:hover {
            background: var(--bg-body);
        }

        .modal-user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 14px;
            object-fit: cover;
        }

        .modal-user-info h4 {
            margin: 0;
            font-size: 16px;
            font-weight: 700;
