        }

        .slide-up {
            animation: slideUp 0.4s ease;
        }

        @keyframes slideUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Mobile specific */
        @media (max-width: 768px) {
            .messages-wrapper {
                height: calc(100vh - 60px);
                /* Adjust for bottom nav */
                padding: 0;
            }

            .conversations-sidebar {
                width: 100%;
                border-right: none;
            }

            .chat-area {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 2000;
                transform: translateX(100%);
                transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                background: white;
            }

            .chat-area.active {
                transform: translateX(0);
            }

            .chat-area.active~.bottom-nav {
                display: none !important;
            }

            .back-btn {
                display: flex;
                margin-right: 10px;
            }

            .chat-header {
                padding: 15px;
            }

            .messages-container {
                padding: 15px;
            }

            .message-group {
                max-width: 85%;
            }

            .input-area {
                padding: 15px;
            }
        }

        .back-btn {
            display: none;
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: rgba(0, 0, 0, 0.03);
            border: none;
            align-items: center;
        }

        /* Create Group Modal */
        .modal-content {
            width: 400px;
        }
    </style>

    <!-- Create Group Modal -->
    <div id="createGroupModal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">New Group</h3>
                <button class="modal-close" onclick="closeGroupModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div style="padding: 20px;">
                <div style="margin-bottom: 20px; text-align: center;">
                    <input type="text" id="newGroupName" placeholder="Group Name"
                        style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 10px; font-size: 16px;">
                </div>

                <div style="margin-bottom: 10px;">
                    <label style="font-weight: 600; color: #666; font-size: 13px;">ADD MEMBERS</label>
                </div>

                <div class="modal-search">
                    <input type="text" id="userSearchInput" placeholder="Search people...">
                </div>

                <div class="modal-users-list" id="userSelectionList">
                    <!-- Users will be populated here -->
                </div>

                <button class="send-btn" style="width: 100%; margin-top: 20px; border-radius: 12px;"
                    onclick="createGroup()">
                    Create Group
                </button>
            </div>
        </div>
    </div>

    <script>
        let selectedUsers = new Set();

        function openGroupModal() {
            document.getElementById('createGroupModal').classList.add('active');
            // Load users to select (mock or API)
        }

        function closeGroupModal() {
            document.getElementById('createGroupModal').classList.remove('active');
        }

        function toggleUserSelection(userId, element) {
            if (selectedUsers.has(userId)) {
                selectedUsers.delete(userId);
                element.style.background = 'transparent';
            } else {
                selectedUsers.add(userId);
                element.style.background = '#f0f2f5';
            }
        }

        async function createGroup() {
            const name = document.getElementById('newGroupName').value;
            if (!name) return alert('Please enter a group name');

            try {
                const API = window.DashboardAPI || window.dashboardAPI;
                if (!API) throw new Error('API not available');

                const memberIds = Array.from(selectedUsers);
                const response = await API.createGroupChat({
                    name,
                    member_ids: memberIds
                });

                if (response.status === 'success') {
                    closeGroupModal();
                    alert('Group Created!');
                    location.reload(); // Simple reload to show new group
                }
            } catch (err) {
                console.error(err);
                alert('Failed to create group');
            }
        }
    </script>



