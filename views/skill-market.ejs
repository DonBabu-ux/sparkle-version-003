<%- include('partials/head', { title: 'Skill Market' }) %>


    <body>
        <%- include('partials/sidebar') %>

            <!-- Main Content Container -->
            <div class="container" id="mainContent">
                <!-- Skill Market Page -->
                <div id="skillMarketPage" class="page active">
                    <div class="header glass">
                        <div style="display:flex; align-items:center; gap:10px;">
                            <div class="hamburger-btn" onclick="window.location.href='/'">
                                <i class="fas fa-chevron-left"></i>
                            </div>
                            <div class="logo-text">Skill Market</div>
                        </div>
                        <button class="btn btn-primary" onclick="offerSkill()" style="border-radius: 14px;">
                            <i class="fas fa-hand-holding-heart"></i> <span class="d-none d-sm-inline">Offer
                                Skill</span>
                        </button>
                    </div>

                    <div class="discover-grid" id="availableSkills" style="padding-bottom: 80px;">
                        <% if (typeof initialOffers !=='undefined' && initialOffers.length> 0) { %>
                            <% initialOffers.forEach(offer=> { %>
                                <div class="discover-card">
                                    <div class="discover-card-banner"
                                        style="background: var(--primary-gradient); height: 120px; display: flex; align-items: center; justify-content: center; color: white;">
                                        <i class="fas fa-graduation-cap" style="font-size: 40px;"></i>
                                        <div class="discover-card-badge"
                                            style="background: rgba(0,0,0,0.5); position: absolute; bottom: 12px; right: 12px; backdrop-filter: blur(5px);">
                                            $<%= offer.price_per_hour || '0' %>/hr
                                        </div>
                                    </div>
                                    <div class="discover-card-content">
                                        <h3 class="discover-card-name">
                                            <%= offer.skill_name %>
                                        </h3>
                                        <div
                                            style="font-size: 11px; font-weight: 700; color: var(--primary); text-transform: uppercase; margin-bottom: 8px;">
                                            <i class="fas fa-tag"></i>
                                            <%= offer.category || 'General' %>
                                        </div>
                                        <p class="discover-card-bio" style="font-size: 13px; -webkit-line-clamp: 2;">
                                            <%= offer.description || 'No description provided' %>
                                        </p>

                                        <div
                                            style="display: flex; align-items: center; gap: 8px; margin-top: 12px; padding-top: 12px; border-top: 1px solid var(--border);">
                                            <div
                                                style="width: 24px; height: 24px; border-radius: 50%; background: var(--border); overflow: hidden;">
                                                <img src="/uploads/avatars/default.png"
                                                    style="width: 100%; height: 100%; object-fit: cover;">
                                            </div>
                                            <span
                                                style="font-size: 12px; font-weight: 600; color: var(--text-secondary);">by
                                                <%= offer.provider_name || offer.username %>
                                            </span>
                                        </div>

                                        <button class="btn btn-outline-primary btn-sm"
                                            style="width: 100%; margin-top: 15px; border-radius: 10px;"
                                            onclick="window.location.href='/messages?user=<%= offer.user_id %>'">
                                            <i class="fas fa-envelope"></i> Contact Provider
                                        </button>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="discover-empty-state">
                                            <i class="fas fa-graduation-cap"></i>
                                            <h4>No skills offered yet</h4>
                                            <p>Be the first to share your expertise with the community!</p>
                                        </div>
                                        <% } %>
                    </div>
                </div>
            </div>

            <%- include('partials/dashboard-modals') %>
                    <script src="/js/dashboardAPI.js"></script>
    </body>

    </html>
